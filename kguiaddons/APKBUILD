# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this apkbuild by some scripts for automation
# group=kde-frameworks
pkgname=kguiaddons
pkgver=9999_git20240924
pkgrel=0
_commit="898aa54d51142042e93e889a70cd50328696bc01"
pkgdesc="Addons to QtGui"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only OR LGPL-3.0-only"
depends_dev="
	plasma-wayland-protocols
	qt6-qttools-dev
	qt6-qtwayland-dev
	wayland-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	doxygen
	graphviz
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/kguiaddons.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-10-02/kguiaddons-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-bin"

options="!check"
builddir="$srcdir/kguiaddons-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

bin() {
	amove usr/bin/kde-geo-uri-handler
	amove usr/share/applications
}

sha512sums="
27e861403d425843e879176cf36d088ff6165d0c8d72484bcb4f52456070bfd99ce6d6a1d1242930b280735ade18896a9fc57bb318f91a3120047b05450c79e1  kguiaddons-898aa54d51142042e93e889a70cd50328696bc01.tar.xz
"
