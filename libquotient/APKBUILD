# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>

# group=3rdparty
pkgname=libquotient
pkgver=9999_git20240916
pkgrel=0
_commit="dd8d3eabbaff8e78f1e201f0a8b082fff68972c2"
pkgdesc="Qt library for cross-platform clients for Matrix"
url="https://github.com/quotient-im/libQuotient"
arch="all !armhf" # blocked by qt5-qtmultimedia
license="LGPL-2.1-or-later"
depends_dev="
	olm-dev
	qt6-qtbase-dev
	qtkeychain-dev
	"
makedepends="$depends_dev
	cmake
	samurai
	"
subpackages="$pkgname-dev"
_repo_url="https://github.com/quotient-im/libQuotient.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-09-17/libQuotient-$_commit.tar.xz"

options="!check"
builddir="$srcdir/libQuotient-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_SHARED_LIBS=True \
		-DBUILD_TESTING=True \
		-DQuotient_INSTALL_TESTS=False
	cmake --build build
}

check() {
	# testolmaccount requires a running Matrix homeserver
	ctest --test-dir build --output-on-failure -E "testolmaccount"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	# android only
	rm -r "$pkgdir"/usr/share/ndk-modules
}

sha512sums="
a5bae78083bf82baaf90b45246238e15d1e42f084fb5a2928dcf0322b98e99c41f5b803c8fba44f86419d360e81e523ffafa2ba3a16ac5d27a52e3318c260a0a  libQuotient-dd8d3eabbaff8e78f1e201f0a8b082fff68972c2.tar.xz
"
