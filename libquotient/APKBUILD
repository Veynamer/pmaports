# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>

# group=3rdparty
pkgname=libquotient
pkgver=9999_git20241016
pkgrel=0
_commit="17acff694a26a17c6054473aff577478d643858f"
pkgdesc="Qt library for cross-platform clients for Matrix"
url="https://github.com/quotient-im/libQuotient"
arch="all !armhf" # blocked by qt5-qtmultimedia
license="LGPL-2.1-or-later"
depends_dev="
	olm-dev
	qt6-qtbase-dev
	qtkeychain-dev
	"
makedepends="$depends_dev
	cmake
	samurai
	"
subpackages="$pkgname-dev"
_repo_url="https://github.com/quotient-im/libQuotient.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-10-18/libQuotient-$_commit.tar.xz"

options="!check"
builddir="$srcdir/libQuotient-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_SHARED_LIBS=True \
		-DBUILD_TESTING=True \
		-DQuotient_INSTALL_TESTS=False
	cmake --build build
}

check() {
	# testolmaccount requires a running Matrix homeserver
	ctest --test-dir build --output-on-failure -E "testolmaccount"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	# android only
	rm -r "$pkgdir"/usr/share/ndk-modules
}

sha512sums="
23e92d793e46e3e8dbcf27371a2d1190de6cffc2f4bcab0c518f0aa542443d8c8b0309a073c5d505ec311bc319346faeb34b7b8d4888604bf417f214e59e284f  libQuotient-17acff694a26a17c6054473aff577478d643858f.tar.xz
"
