# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>

# group=3rdparty
pkgname=libquotient
pkgver=9999_git20241013
pkgrel=0
_commit="2ac716de99bb379e4e1eca02bec607f4db85890b"
pkgdesc="Qt library for cross-platform clients for Matrix"
url="https://github.com/quotient-im/libQuotient"
arch="all !armhf" # blocked by qt5-qtmultimedia
license="LGPL-2.1-or-later"
depends_dev="
	olm-dev
	qt6-qtbase-dev
	qtkeychain-dev
	"
makedepends="$depends_dev
	cmake
	samurai
	"
subpackages="$pkgname-dev"
_repo_url="https://github.com/quotient-im/libQuotient.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-10-14/libQuotient-$_commit.tar.xz"

options="!check"
builddir="$srcdir/libQuotient-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_SHARED_LIBS=True \
		-DBUILD_TESTING=True \
		-DQuotient_INSTALL_TESTS=False
	cmake --build build
}

check() {
	# testolmaccount requires a running Matrix homeserver
	ctest --test-dir build --output-on-failure -E "testolmaccount"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	# android only
	rm -r "$pkgdir"/usr/share/ndk-modules
}

sha512sums="
98e6522777342c1628d0ef58c2f012aae6319a4b4e6823ff8b07b1194c4ad74c3578e8c9770a947108f56201abe373c69007459ff72b73186103c25605d26be4  libQuotient-2ac716de99bb379e4e1eca02bec607f4db85890b.tar.xz
"
