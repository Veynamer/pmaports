# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=calindori
pkgver=9999_git20241006
pkgrel=0
_commit="135f71d0f7121cd3c49a856333ffa14880884f5f"
pkgdesc="Calendar for Plasma Mobile"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/plasma-mobile/calindori"
license="GPL-3.0-or-later AND LGPL-3.0-or-later AND BSD-2-Clause AND CC-BY-SA-4.0 AND CC0-1.0"
depends="kirigami"
makedepends="
	extra-cmake-modules
	kcalendarcore-dev
	kconfig-dev
	ki18n-dev
	kirigami-dev
	kpeople-dev
	libplasma-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/plasma-mobile/calindori.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-10-16/calindori-$_commit.tar.xz"
subpackages="$pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/calindori-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

