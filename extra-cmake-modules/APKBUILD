# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=extra-cmake-modules
pkgver=9999_git20240906
pkgrel=0
_commit="249f10a0ac2df40e27ae27ed5846107b5e4d5e48"
pkgdesc="Extra CMake modules"
url="https://invent.kde.org/frameworks/extra-cmake-modules"
arch="noarch"
license="BSD-3-Clause"
depends="cmake"
makedepends="
	py3-sphinx
	samurai
	"
checkdepends="
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qttools-dev
	"
_repo_url="https://invent.kde.org/frameworks/extra-cmake-modules.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-09-13/extra-cmake-modules-$_commit.tar.xz"
subpackages="$pkgname-doc"

options="!check"
builddir="$srcdir/extra-cmake-modules-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DSphinx_BUILD_EXECUTABLE=/usr/bin/sphinx-build \
		-DBUILD_QTHELP_DOCS=ON
	cmake --build build
}

check() {
	# KDEFetchTranslations expects KDE's git setup
	ctest --test-dir build --output-on-failure -E "KDEFetchTranslations"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
91a6fd0dc574a7fc6f4c60a54fc30ea65e0d59a94cf6611305b955faa976ce2d3772074ff168263d844ab3d6d62777e77d4bb8c27aed88c1bb2b3965120a5292  extra-cmake-modules-249f10a0ac2df40e27ae27ed5846107b5e4d5e48.tar.xz
"
