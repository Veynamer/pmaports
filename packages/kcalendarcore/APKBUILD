# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kcalendarcore
pkgver=99999_git20250516
pkgrel=0
_commit="624c5ffdc9f4d2cd95532a456a88161c3ce6fa2d"
pkgdesc="The KDE calendar access library"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later"
depends_dev="
	libical-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	qt6-qttools-dev
	samurai
	"
subpackages="$pkgname-dev $pkgname-doc"
_repo_url="https://invent.kde.org/frameworks/kcalendarcore.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-05-22/kcalendarcore-$_commit.tar.xz"
options="!check" # RecursOn-ConnectDaily(2|3|6) make the builders stuck

replaces="kcalcore"

options="!check"
builddir="$srcdir/kcalendarcore-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	cmake --build build --target prepare_docs
	cmake --build build --target generate_docs
	cmake --build build --target generate_qch
}

check() {
	# testrecurtodo, testreadrecurrenceid, testicaltimezones, testmemorycalendar and testtimesininterval are broken
	ctest --test-dir build -E "test(recurtodo|readrecurrenceid|icaltimezones|memorycalendar|timesininterval)"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
1be489e4cbdfb332e5de950645efd8769b9ecbd79b8d0b6386e3af980fb42db332f31a15fcf09940cd816c4fe460ffd0c397584171816b65d000c7ebc125d495  kcalendarcore-624c5ffdc9f4d2cd95532a456a88161c3ce6fa2d.tar.xz
"
