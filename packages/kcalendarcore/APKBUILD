# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kcalendarcore
pkgver=99999_git20250524
pkgrel=0
_commit="546ed8b16f3d245033fabe34f0814bd61aaf7b65"
pkgdesc="The KDE calendar access library"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later"
depends_dev="
	libical-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	qt6-qttools-dev
	samurai
	"
subpackages="$pkgname-dev $pkgname-doc"
_repo_url="https://invent.kde.org/frameworks/kcalendarcore.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-05-25/kcalendarcore-$_commit.tar.xz"
options="!check" # RecursOn-ConnectDaily(2|3|6) make the builders stuck

replaces="kcalcore"

options="!check"
builddir="$srcdir/kcalendarcore-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	cmake --build build --target prepare_docs
	cmake --build build --target generate_docs
	cmake --build build --target generate_qch
}

check() {
	# testrecurtodo, testreadrecurrenceid, testicaltimezones, testmemorycalendar and testtimesininterval are broken
	ctest --test-dir build -E "test(recurtodo|readrecurrenceid|icaltimezones|memorycalendar|timesininterval)"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
7a993ea383ee9fae90fd0a4d195491d7701642b12bf90b76bd678b413eb997301b2e9c8915ef8fdb91a2aa69cf06e103bfc1bd502ac3de074de1bb3e6cac276d  kcalendarcore-546ed8b16f3d245033fabe34f0814bd61aaf7b65.tar.xz
"
