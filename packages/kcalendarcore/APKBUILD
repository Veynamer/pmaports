# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kcalendarcore
pkgver=99999_git20250527
pkgrel=0
_commit="7c2685e54d5b6850582d52a8a7f804ff94745a6b"
pkgdesc="The KDE calendar access library"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later"
depends_dev="
	libical-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	qt6-qttools-dev
	samurai
	"
subpackages="$pkgname-dev $pkgname-doc"
_repo_url="https://invent.kde.org/frameworks/kcalendarcore.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-06-03/kcalendarcore-$_commit.tar.xz"
options="!check" # RecursOn-ConnectDaily(2|3|6) make the builders stuck

replaces="kcalcore"

options="!check"
builddir="$srcdir/kcalendarcore-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	cmake --build build --target prepare_docs
	cmake --build build --target generate_docs
	cmake --build build --target generate_qch
}

check() {
	# testrecurtodo, testreadrecurrenceid, testicaltimezones, testmemorycalendar and testtimesininterval are broken
	ctest --test-dir build -E "test(recurtodo|readrecurrenceid|icaltimezones|memorycalendar|timesininterval)"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
2e08f0c4f71de69aaa6294163fcf5be764631826ba7417b0aef7fcc587b689ea19f2d4ad53218705cd7e95fea1b70ae073d3cfc04050b8dcbb1a5a54ced75e46  kcalendarcore-7c2685e54d5b6850582d52a8a7f804ff94745a6b.tar.xz
"
