# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kiriki
pkgver=99999_git20250521
pkgrel=0
_commit="4de1258ad38a5fafee6d9fb1a8bb25c81bff66b0"
pkgdesc="An addictive and fun dice game"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/games/kiriki/"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kdoctools-dev
	ki18n-dev
	kiconthemes-dev
	kxmlgui-dev
	libkdegames-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/games/kiriki.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-05-22/kiriki-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kiriki-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
69d5f0b9995716bacf0e685c0ad1b51b943bc3413e85ec8cc1c18ab8110edaf242c170585b746d155cb70dfcd5ac2f9103b7484d782e287b73b2d5bc5b12aa3c  kiriki-4de1258ad38a5fafee6d9fb1a8bb25c81bff66b0.tar.xz
"
