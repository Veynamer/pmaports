# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=polkit-kde-agent-1
pkgver=99999_git20250515
pkgrel=0
_commit="1b396c11549632e37b0fcd3ea6656beb7b69afc0"
pkgdesc="Daemon providing a polkit authentication UI for KDE"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
depends="polkit-elogind"
makedepends="
	extra-cmake-modules
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	ki18n-dev
	kiconthemes-dev
	knotifications-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	polkit-qt-dev
	qt6-qtbase-dev
	samurai
	"
case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/polkit-kde-agent-1.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-05-16/polkit-kde-agent-1-$_commit.tar.xz"
subpackages="$pkgname-systemd $pkgname-lang"
options="!check" # No tests

builddir="$srcdir/polkit-kde-agent-1-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
6a24adce30a931f48d953fdb0cec8f2fe077d5b07fdd41d4e41d17db5f93928a8dc05b653e980aa27efda87952ac13ccaee5a06831e4f64260c5e331d3d53384  polkit-kde-agent-1-1b396c11549632e37b0fcd3ea6656beb7b69afc0.tar.xz
"
