# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=polkit-kde-agent-1
pkgver=99999_git20250324
pkgrel=0
_commit="f050816e9b8d320a6775999cea4e6b5399c88707"
pkgdesc="Daemon providing a polkit authentication UI for KDE"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
depends="polkit-elogind"
makedepends="
	extra-cmake-modules
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	ki18n-dev
	kiconthemes-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	polkit-qt-dev
	qt6-qtbase-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/polkit-kde-agent-1.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-03-24/polkit-kde-agent-1-$_commit.tar.xz"
subpackages="$pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/polkit-kde-agent-1-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build

	# We don't ship systemd
	rm -r "$pkgdir"/usr/lib/systemd
}

sha512sums="
807ca293591af4eda28f64bf0d6b7fc4099ad4257b17f00a8cce6d9dcf8861e6aa1eac1ecaa5e2a1b7487af5df3e62036c634572cf5ee0dc034f01cc55295f0a  polkit-kde-agent-1-f050816e9b8d320a6775999cea4e6b5399c88707.tar.xz
"
