# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kollision
pkgver=9999_git20241020
pkgrel=0
_commit="94b3462a7032d9f2efaec50be2d33928ae1bf2a9"
pkgdesc="A simple ball dodging game"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/games/kollision/"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kdoctools-dev
	ki18n-dev
	kwidgetsaddons-dev
	kxmlgui-dev
	libkdegames-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/games/kollision.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-10-30/kollision-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kollision-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
b4c39141dbcfd27468364f9bfbb9f3be11d159ff07c5b9d1f30d29d037cec39635f90c9a8bae5e44c9cf4f2ecdc30932453eb2ac1b543b4f1a76bf4bfc5dd29a  kollision-94b3462a7032d9f2efaec50be2d33928ae1bf2a9.tar.xz
"
