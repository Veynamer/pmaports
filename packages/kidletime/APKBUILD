# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kidletime
pkgver=9999_git20241113
pkgrel=0
_commit="6d0c3f748b2c7444d7afd0e7147a0f696c1f9901"
pkgdesc="Monitoring user activity"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-only"
makedepends="
	doxygen
	extra-cmake-modules
	plasma-wayland-protocols
	qt6-qttools-dev
	qt6-qtwayland-dev
	samurai
	wayland-dev
	wayland-protocols
	"
_repo_url="https://invent.kde.org/frameworks/kidletime.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-11-14/kidletime-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"

options="!check"
builddir="$srcdir/kidletime-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	# solidmttest is broken
	ctest --test-dir build --output-on-failure -E "solidmttest"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
970298e6b84a3254bccfaf91b36c9d165d6f918fdfcac9293666fbc9a665dc2cd65904f21e3149d5e3d12d93bd7a7cc84a3a5d0761137d88f2ca62984b363930  kidletime-6d0c3f748b2c7444d7afd0e7147a0f696c1f9901.tar.xz
"
