# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kidletime
pkgver=9999_git20241111
pkgrel=0
_commit="49423cdcd963ce883b0ef587eeb5d8718d00f0d6"
pkgdesc="Monitoring user activity"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-only"
makedepends="
	doxygen
	extra-cmake-modules
	plasma-wayland-protocols
	qt6-qttools-dev
	qt6-qtwayland-dev
	samurai
	wayland-dev
	wayland-protocols
	"
_repo_url="https://invent.kde.org/frameworks/kidletime.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-11-12/kidletime-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"

options="!check"
builddir="$srcdir/kidletime-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	# solidmttest is broken
	ctest --test-dir build --output-on-failure -E "solidmttest"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
8cb1bf7568f9be451f9f1eaa5c8ead8a7a2552e77941f6751fd92f8ddf50530b1f2ec664b36d8f8b6c8c33463345ffd43c48b54763b9e5c86653c19b28f2cb57  kidletime-49423cdcd963ce883b0ef587eeb5d8718d00f0d6.tar.xz
"
