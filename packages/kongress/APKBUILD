# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kongress
pkgver=99999_git20250212
pkgrel=0
_commit="778cb3bdb36ad857b22bf365fc7535981c483bca"
pkgdesc="Companion application for conferences"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/utilities/kongress"
license="GPL-3.0-or-later AND LGPL-3.0-or-later AND BSD-2-Clause AND CC-BY-SA-4.0 AND CC0-1.0"
depends="kirigami"
makedepends="
	extra-cmake-modules
	kcalendarcore-dev
	kconfig-dev
	kcoreaddons-dev
	kdbusaddons-dev
	ki18n-dev
	kirigami-addons-dev
	kirigami-dev
	knotifications-dev
	kosmindoormap-dev
	kservice-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtsvg-dev
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/utilities/kongress.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-02-12/kongress-$_commit.tar.xz"
subpackages="$pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kongress-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

