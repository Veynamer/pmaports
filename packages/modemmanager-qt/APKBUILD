# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=modemmanager-qt
pkgver=99999_git20250524
pkgrel=0
_commit="9764c45970b142dbeb292aa984f15c33fead2a71"
pkgdesc="Qt wrapper for ModemManager DBus API"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only OR LGPL-3.0-only"
depends_dev="
	modemmanager-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz-dev
	kde-qdoc-common
	qt6-qttools-dev
	samurai
	"
subpackages="$pkgname-dev $pkgname-doc"
checkdepends="dbus"
_repo_url="https://invent.kde.org/frameworks/modemmanager-qt.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-05-25/modemmanager-qt-$_commit.tar.xz"

options="!check"
builddir="$srcdir/modemmanager-qt-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	cmake --build build --target prepare_docs
	cmake --build build --target generate_docs
	cmake --build build --target generate_qch
}

check() {
	dbus-run-session -- ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
3e2773cd16e29abbd41670a99d775abd4beb0e54b910cb33cf9fbb81843922d51dac8ac35d0d5349614c761ddd3fc478ed0fc3564bf64a9c2d4148e46f910373  modemmanager-qt-9764c45970b142dbeb292aa984f15c33fead2a71.tar.xz
"
