# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=modemmanager-qt
pkgver=9999_git20241116
pkgrel=0
_commit="448e4c40dfbb6ea0ee4b9630dcc3c7cb4fd4e0ca"
pkgdesc="Qt wrapper for ModemManager DBus API"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only OR LGPL-3.0-only"
depends_dev="
	modemmanager-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz-dev
	qt6-qttools-dev
	samurai
	"
subpackages="$pkgname-dev $pkgname-doc"
checkdepends="dbus"
_repo_url="https://invent.kde.org/frameworks/modemmanager-qt.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-12-04/modemmanager-qt-$_commit.tar.xz"

options="!check"
builddir="$srcdir/modemmanager-qt-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	dbus-run-session -- ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
8d81bebf65db7d988b53066377f8b1b83827841ed74190ef5ce0615203746985d7a23484c78b9d4997b17a6e3a4aad87556730fa88333acb0674af9954fd1f26  modemmanager-qt-448e4c40dfbb6ea0ee4b9630dcc3c7cb4fd4e0ca.tar.xz
"
