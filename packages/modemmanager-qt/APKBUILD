# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=modemmanager-qt
pkgver=99999_git20250504
pkgrel=0
_commit="a1f94014a98415a54de3bedf94ef6731663a1787"
pkgdesc="Qt wrapper for ModemManager DBus API"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only OR LGPL-3.0-only"
depends_dev="
	modemmanager-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz-dev
	kde-qdoc-common
	qt6-qttools-dev
	samurai
	"
subpackages="$pkgname-dev $pkgname-doc"
checkdepends="dbus"
_repo_url="https://invent.kde.org/frameworks/modemmanager-qt.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-05-16/modemmanager-qt-$_commit.tar.xz"

options="!check"
builddir="$srcdir/modemmanager-qt-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	cmake --build build --target prepare_docs
	cmake --build build --target generate_docs
	cmake --build build --target generate_qch
}

check() {
	dbus-run-session -- ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
d087fb298fd2c9558592f665988b3e3452e21c73c580f06fd337e7bcf1b55167f5523b95ea2ab17ae3621e0013bb5ac9e3f2344cd20e4bc71300a1344f5ff2a0  modemmanager-qt-a1f94014a98415a54de3bedf94ef6731663a1787.tar.xz
"
