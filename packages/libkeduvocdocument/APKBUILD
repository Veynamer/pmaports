# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=libkeduvocdocument
pkgver=99999_git20250319
pkgrel=0
_commit="50f3697e7442f647922d98cfc4bcf84014befb58"
arch="all !armhf"
url="https://edu.kde.org"
pkgdesc="Library to parse, convert, and manipulate KVTML files"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	karchive-dev
	ki18n-dev
	kio-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/education/libkeduvocdocument.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-03-24/libkeduvocdocument-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/libkeduvocdocument-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
4505e792c9b12b1026b39c32b05ad34d2ec6bebb18c482c464d82e75a6e5798bbcd6e79750c1fc0f20c3f98727799d05f1a19f83a0ba24e6f19934ec40e14ce7  libkeduvocdocument-50f3697e7442f647922d98cfc4bcf84014befb58.tar.xz
"
