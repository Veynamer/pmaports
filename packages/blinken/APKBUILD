# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=blinken
pkgver=9999_git20241225
pkgrel=0
_commit="5dc5e4ddd1905cb9cef51e0a32f66aca07e7ccb1"
# armhf blocked by extra-cmake-modules
# s390x blocked by kxmlgui
arch="all !armhf !s390x !riscv64"
url="https://edu.kde.org/blinken/"
pkgdesc="Memory Enhancement Game"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kcrash-dev
	kdbusaddons-dev
	kdoctools-dev
	kguiaddons-dev
	ki18n-dev
	kxmlgui-dev
	phonon-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	samurai
	"
_repo_url="https://invent.kde.org/education/blinken.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-12-27/blinken-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/blinken-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
e6ad6aa504e20e11cc62605a8ebe96be191b0049afeab44dba9da625b18cc5f91d9be6e8addde3bbb448244f6cf99cfe9c78f04f5b7b2e17f03e050d080e7453  blinken-5dc5e4ddd1905cb9cef51e0a32f66aca07e7ccb1.tar.xz
"
