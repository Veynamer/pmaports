# Maintainer: Bart Ribbers <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=haruna
pkgver=9999_git20241128
pkgrel=0
_commit="df1aa98ebf479c51aa2fe940344702b646e341be"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://invent.kde.org/multimedia/haruna"
pkgdesc="Open-source video player built with Qt/QML and libmpv"
license="GPL-2.0-or-later AND GPL-3.0-or-later AND BSD-3-Clause"
depends="
	kirigami
	yt-dlp
	"
makedepends="
	breeze-dev
	extra-cmake-modules
	ffmpeg-dev
	kconfig-dev
	kcoreaddons-dev
	kdoctools-dev
	kfilemetadata-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	kirigami-dev
	kxmlgui-dev
	mpvqt-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	samurai
	"
_repo_url="https://invent.kde.org/multimedia/haruna.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-11-29/haruna-$_commit.tar.xz"
subpackages="$pkgname-lang "

options="!check"
builddir="$srcdir/haruna-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
05ed39c20a348e39d0bbcb8dc7feb5622813b282a5c1f17f6fd67413d792b4007fed291d53b83d10fce84b0b8a47495c99499e5e0bfa450c84f071db2c3c7a93  haruna-df1aa98ebf479c51aa2fe940344702b646e341be.tar.xz
"
