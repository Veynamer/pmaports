# Maintainer: Bart Ribbers <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=haruna
pkgver=9999_git20241031
pkgrel=0
_commit="439d2a2c0bd891e61f8f5a7f67c902041b231089"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://invent.kde.org/multimedia/haruna"
pkgdesc="Open-source video player built with Qt/QML and libmpv"
license="GPL-2.0-or-later AND GPL-3.0-or-later AND BSD-3-Clause"
depends="
	kirigami
	yt-dlp
	"
makedepends="
	breeze-dev
	extra-cmake-modules
	ffmpeg-dev
	kconfig-dev
	kcoreaddons-dev
	kdoctools-dev
	kfilemetadata-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	kirigami-dev
	kxmlgui-dev
	mpvqt-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	samurai
	"
_repo_url="https://invent.kde.org/multimedia/haruna.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-11-01/haruna-$_commit.tar.xz"
subpackages="$pkgname-lang "

options="!check"
builddir="$srcdir/haruna-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
dc6245c868dc0a082b48144e5ee3dd00a8d55ce72780036c778d3aa2e8c2ec159a403ad4eba999996b777c1af2689f7c0f7a931888a489e30cd6ec946cb3d365  haruna-439d2a2c0bd891e61f8f5a7f67c902041b231089.tar.xz
"
