# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=haruna
pkgver=9999_git20241223
pkgrel=0
_commit="16c534b89c7caa281ac93aa0e0c186cd7704c76f"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/multimedia/haruna"
pkgdesc="Open-source video player built with Qt/QML and libmpv"
license="GPL-2.0-or-later AND GPL-3.0-or-later AND BSD-3-Clause"
depends="
	kirigami
	yt-dlp
	"
makedepends="
	breeze-dev
	extra-cmake-modules
	ffmpeg-dev
	kconfig-dev
	kcoreaddons-dev
	kdoctools-dev
	kfilemetadata-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	kirigami-dev
	kxmlgui-dev
	mpvqt-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	"
_repo_url="https://invent.kde.org/multimedia/haruna.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-12-23/haruna-$_commit.tar.xz"
subpackages="$pkgname-lang "

options="!check"
builddir="$srcdir/haruna-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
