# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kglobalacceld
pkgver=99999_git20250212
pkgrel=0
_commit="d7f3eff3098a3911126bd98b41e1d11df930f2a2"
pkgdesc="Daemon providing Global Keyboard Shortcut (Accelerator) functionality"
# armhf blocked by qt6-qtdeclarative -> kio
arch="all !armhf"
url="https://invent.kde.org/plasma/kglobalacceld"
license="LGPL-2.0-or-later AND LGPL-2.0-only AND LGPL-2.1-or-later"
depends_dev="$pkgname
	kconfig-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kglobalaccel-dev
	kio-dev
	knotifications-dev
	kservice-dev
	kwindowsystem-dev
	qt6-qtbase-dev
	xcb-util-keysyms-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	qt6-qttools-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/plasma/kglobalacceld.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-03-06/kglobalacceld-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/kglobalacceld-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	dbus-run-session -- xvfb-run -a ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build

	# We don't ship systemd
	rm -r "$pkgdir"/usr/lib/systemd
}
sha512sums="
2410126a59e18f308b334670ef82bbe00106b76f7ca345a2a101bc172b645f68ec5ef712978bd952a30a513ca9f6370d3d6314e83edc9c84fd9e68989756bfe3  kglobalacceld-d7f3eff3098a3911126bd98b41e1d11df930f2a2.tar.xz
"
