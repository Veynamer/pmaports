# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=ktexttemplate
pkgver=99999_git20250524
pkgrel=0
_commit="49571adc01f37d5942ceaa4f88770c29ed746ab0"
pkgdesc="Library to allow application developers to separate the structure of documents from the data they contain"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later AND LGPL-2.1-or-later"
makedepends="
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	qt6-qtbase-dev
	samurai
	graphviz
	qt6-qttools-dev
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/ktexttemplate.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-05-25/ktexttemplate-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc "

options="!check"
builddir="$srcdir/ktexttemplate-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	cmake --build build --target prepare_docs
	cmake --build build --target generate_docs
	cmake --build build --target generate_qch
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}
sha512sums="
75be4efc1f8974ddd1beb254bd9d8aa485a2794f38af347d587f0caa2bd7d85bf257096dd532894db9b96eb74a12a63f5bd11a20e7f664436939f27e9a5b2b29  ktexttemplate-49571adc01f37d5942ceaa4f88770c29ed746ab0.tar.xz
"
