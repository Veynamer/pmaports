# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=ktexttemplate
pkgver=99999_git20250504
pkgrel=0
_commit="503e7747f6320e9a1db9d047c1088263181c4f1e"
pkgdesc="Library to allow application developers to separate the structure of documents from the data they contain"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later AND LGPL-2.1-or-later"
makedepends="
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	qt6-qtbase-dev
	samurai
	graphviz
	qt6-qttools-dev
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/ktexttemplate.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-05-16/ktexttemplate-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc "

options="!check"
builddir="$srcdir/ktexttemplate-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	cmake --build build --target prepare_docs
	cmake --build build --target generate_docs
	cmake --build build --target generate_qch
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}
sha512sums="
b7b8a94fcd2e960c5a8e77ace74fda32a121b595f5c8169b0316fc75dbaa62d08b981789cbf57f9992ae069eecaa491cf234efb636e10cf505fdca53aafb1d98  ktexttemplate-503e7747f6320e9a1db9d047c1088263181c4f1e.tar.xz
"
