# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kpeople
pkgver=99999_git20250314
pkgrel=0
_commit="941e8f6d479701828e6c69ad653882a9dd89f2c8"
pkgdesc="A library that provides access to all contacts and the people who hold them"
arch="all !armhf" # armhf blocked by qt6-qtdeclarative
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later"
depends="qt6-qtbase-sqlite"
depends_dev="
	kcontacts-dev
	kcoreaddons-dev
	ki18n-dev
	kitemviews-dev
	kservice-dev
	kwidgetsaddons-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kpeople.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-03-24/kpeople-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"


options="!check"
builddir="$srcdir/kpeople-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	# personsmodeltest fails
	ctest --test-dir build -E '(personsmodeltest)'
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
b859ac798056a353e1668710fefcd921bd40fe496681860850acc3b902f694a4224a35995e84637e11aeaffc2d0335b3c05bf5d8d5870a2854b080abe183432b  kpeople-941e8f6d479701828e6c69ad653882a9dd89f2c8.tar.xz
"
