# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kaccounts-integration
pkgver=9999_git20241202
pkgrel=0
_commit="0f6dfbb8d26c68d35e518925f11fb3318c878c93"
# armhf blocked by extra-cmake-modules
# s390x, ppc64le, riscv64 blocked by qt6-qtwebengine -> signon-ui
arch="all !armhf !s390x !ppc64le !riscv64"
url="https://kde.org/applications/internet/"
pkgdesc="Small system to administer web accounts for the sites and services across the KDE desktop"
license="GPL-2.0-or-later AND LGPL-2.1-or-later"
depends="
	accounts-qml-module
	signon-ui
	"
depends_dev="
	kcmutils-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kdeclarative-dev
	ki18n-dev
	libaccounts-qt-dev
	qcoro-dev
	qt6-qtbase-dev
	signond-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"
subpackages="$pkgname-dev $pkgname-lang"
_repo_url="https://invent.kde.org/network/kaccounts-integration.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-12-07/kaccounts-integration-$_commit.tar.xz"
options="!check" # No tests available

builddir="$srcdir/kaccounts-integration-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
0c2e2c2bd90b1b0032f042003fec21ceb716d6df34a19b64e6a419f95a1953f43ebbed807d1bc2a7e5b0c3b63a5d5fff8f5af36a6129ebf9b67bceafc4738289  kaccounts-integration-0f6dfbb8d26c68d35e518925f11fb3318c878c93.tar.xz
"
