# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=akonadi-calendar-tools
pkgver=99999_git20250520
pkgrel=0
_commit="15e9f9ab7681938e2dc764dad00a979caca9b590"
# armhf blocked by extra-cmake-modules
# ppc64le, s390x and riscv64 blocked by akonadi-calendar -> kmailtransport -> libkgapi -> qt6-qtwebengine
arch="all !armhf !ppc64le !s390x !riscv64"
url="https://kontact.kde.org/"
pkgdesc="CLI tools to manage akonadi calendars"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	akonadi-calendar-dev
	akonadi-dev
	calendarsupport-dev
	extra-cmake-modules
	kcalendarcore-dev
	kcalutils-dev
	kdoctools-dev
	libkdepim-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/pim/akonadi-calendar-tools.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-05-22/akonadi-calendar-tools-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests available

options="!check"
builddir="$srcdir/akonadi-calendar-tools-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
61a3020c6cad2cd78d1de3738a9dcda54d81fc597f2e8d1e9a61112324e2f24c5f7c8cbafef619f81fd292881f5fc8a1b46f9de57b1928a623d5628d591a044f  akonadi-calendar-tools-15e9f9ab7681938e2dc764dad00a979caca9b590.tar.xz
"
