# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kunitconversion
pkgver=99999_git20250601
pkgrel=0
_commit="957f751028994b57c69e80bbca1aa9fec35f7630"
pkgdesc="Support for unit conversion"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later"
depends_dev="
	ki18n-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	py3-build
	py3-setuptools
	py3-shiboken6
	pyside6-dev
	python3-dev
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kunitconversion.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-06-03/kunitconversion-$_commit.tar.xz"
subpackages="
	$pkgname-dev
	$pkgname-doc
	$pkgname-lang
	py3-$pkgname:_py3
	"
options="net" # net required for tests

options="!check"
builddir="$srcdir/kunitconversion-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	cmake --build build --target prepare_docs
	cmake --build build --target generate_docs
	cmake --build build --target generate_qch
}

check() {
	ctest --test-dir build -j1
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

_py3() {
	amove usr/lib/python*
}

sha512sums="
37ff02d3205c518c059d328bba26bb6beb05cb3d8e155f22374bcc7bbdb23bd4c282fbec187368e3eac901110aaa3893c1bc49d4935aa09a32eb1c3bd37593a1  kunitconversion-957f751028994b57c69e80bbca1aa9fec35f7630.tar.xz
"
