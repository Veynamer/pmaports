# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kpty
pkgver=9999_git20241113
pkgrel=0
_commit="1c11393c17bc0127c8dc0d2f7bd9157b5c2215f1"
pkgdesc="Pty abstraction"
arch="all !armhf" # armhf blocked by extra-cmake-modules
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later"
depends_dev="
	kcoreaddons-dev
	ki18n-dev
	libutempter-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kpty.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-11-14/kpty-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
options="!check" # The one test it has fails: "Can't open a pseudo teletype"

options="!check"
builddir="$srcdir/kpty-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
12e87d9aefc53a55d43c88c632233b58ddf05d0683b3a79188c18c6fecf6167dd4e6f626ddb43b723173166506ae644d7a13aba31b1ba631234839a3c03a6200  kpty-1c11393c17bc0127c8dc0d2f7bd9157b5c2215f1.tar.xz
"
