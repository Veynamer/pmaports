# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kwalletmanager
pkgver=99999_git20250128
pkgrel=0
_commit="639fa1fe378caad488efb8a5c70c531f4b48020b"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/system/org.kde.kwalletmanager5"
pkgdesc="A tool to manage the passwords on your KDE system"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	karchive-dev
	kauth-dev
	kcmutils-dev
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kdoctools-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	kjobwidgets-dev
	knotifications-dev
	kservice-dev
	kstatusnotifieritem-dev
	ktextwidgets-dev
	kwallet-dev
	kwindowsystem-dev
	kxmlgui-dev
	qt6-qtbase-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/utilities/kwalletmanager.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-01-28/kwalletmanager-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kwalletmanager-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
8ddac1248171578c68c62a0038fedc9bca1479f9096bda5672bfb9817689fcefd364724585efbe4198e1a08f30e5789e3746890fc6c14493946bcc7ba37d5b7d  kwalletmanager-639fa1fe378caad488efb8a5c70c531f4b48020b.tar.xz
"
