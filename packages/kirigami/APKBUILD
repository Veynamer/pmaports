# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kirigami
pkgver=99999_git20250519
pkgrel=0
_commit="fa73f2a040e5c6e22985b0c2a16849ad800cde5b"
pkgdesc="A QtQuick based components set"
arch="all !armhf" # armhf blocked by qt6-qtdeclarative
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-only"
depends="qt6-qtsvg"
depends_dev="
	kconfig-dev
	kcoreaddons-dev
	kwindowsystem-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kirigami.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-05-22/kirigami-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-libs $pkgname-lang"

options="!check"
builddir="$srcdir/kirigami-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_EXAMPLES=OFF
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
5f68993eeeb4ba85ffa1eaa7b7df7ac54f36ea6da9ac6a991ca68c78932386dfd2b61b2564e3cbb48f3f0f700b8f61f73a3c2c551710e1e5016c2e58700dee6b  kirigami-fa73f2a040e5c6e22985b0c2a16849ad800cde5b.tar.xz
"
