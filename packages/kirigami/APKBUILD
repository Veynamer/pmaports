# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kirigami
pkgver=99999_git20250407
pkgrel=0
_commit="88c34154089a5bc3311381f5fc86e2a4475c81a9"
pkgdesc="A QtQuick based components set"
arch="all !armhf" # armhf blocked by qt6-qtdeclarative
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-only"
depends="qt6-qtsvg"
depends_dev="
	kconfig-dev
	kcoreaddons-dev
	kwindowsystem-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kirigami.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-04-07/kirigami-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-libs $pkgname-lang"

options="!check"
builddir="$srcdir/kirigami-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_EXAMPLES=OFF
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
06e33065ae504f784a4f8f4018877df0031d74615b518e15b0fbe3aa5c2eed50d579c39ba9bcdd1d93c153f336b118a58eb407a2eef99c2bff0df89438dc0297  kirigami-88c34154089a5bc3311381f5fc86e2a4475c81a9.tar.xz
"
