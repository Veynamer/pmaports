# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=yakuake
pkgver=9999_git20241020
pkgrel=0
_commit="881cbc20faa67d063be038d9d32708a30c451d5a"
arch="all !armhf"
url="https://kde.org/applications/system/org.kde.yakuake"
pkgdesc="A drop-down terminal emulator based on KDE Konsole technology"
license="GPL-2.0-only OR GPL-3.0-only"
depends="konsole"
makedepends="
	extra-cmake-modules
	karchive-dev
	kconfig-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kglobalaccel-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	knewstuff-dev
	knotifications-dev
	knotifyconfig-dev
	kparts-dev
	kstatusnotifieritem-dev
	kwayland-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	samurai
	"
_repo_url="https://invent.kde.org/utilities/yakuake.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-10-23/yakuake-$_commit.tar.xz"
subpackages="$pkgname-lang"

options="!check"
builddir="$srcdir/yakuake-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
7abf1667377aafd58cc0a31338b0d20f31dd8d023ccd0ffaabf05bf7d03c7c19c6d94216710a325b11028e9583d2196ea408d5d01237008f841f2e12ab91685b  yakuake-881cbc20faa67d063be038d9d32708a30c451d5a.tar.xz
"
