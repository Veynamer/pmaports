# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kde-dev-scripts
pkgver=99999_git20250323
pkgrel=0
_commit="234376baa3da4de16b18a2dff1c99874c1e33133"
# armhf blocked by extra-cmake-modules
arch="all !armhf !s390x"
url="https://kde.org/applications/development/"
pkgdesc="Scripts and setting files useful during development of KDE software"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kdoctools-dev
	samurai
	"
_repo_url="https://invent.kde.org/sdk/kde-dev-scripts.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-03-25/kde-dev-scripts-$_commit.tar.xz"
subpackages="$pkgname-doc"
options="!check" # No code to test

options="!check"
builddir="$srcdir/kde-dev-scripts-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
