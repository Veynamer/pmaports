# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=syntax-highlighting
pkgver=99999_git20250603
pkgrel=0
_commit="aba4bfaa254fccb7fbf85ca2e23a0c057f543397"
pkgdesc="Syntax highlighting engine for structured text and code"
arch="all !armhf" # armhf blocked by extra-cmake-modules
url="https://community.kde.org/Frameworks"
license="MIT"
depends_dev="
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	xerces-c-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	perl
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/syntax-highlighting.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-06-03/syntax-highlighting-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/syntax-highlighting-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=OFF # Currently breaks the build
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
e6016123cc4ce693d4e234fb8d10c59484387206f021baacc4f08c6e491d792807d33a5ca6c7138dbce77ff81cec559ddadf088d602b4d83dadee4fdd34163fd  syntax-highlighting-aba4bfaa254fccb7fbf85ca2e23a0c057f543397.tar.xz
"
