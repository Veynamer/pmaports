# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kdbusaddons
pkgver=99999_git20250513
pkgrel=0
_commit="343bc2bcf6ae19eb7a0dc4be0b9768267c3683fd"
pkgdesc="Addons to QtDBus"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only OR LGPL-3.0-only"
makedepends="
	doxygen
	extra-cmake-modules
	graphviz
	kde-qdoc-common
	qt6-qtbase-private-dev
	qt6-qttools-dev
	shared-mime-info
	samurai
	"
checkdepends="dbus"
_repo_url="https://invent.kde.org/frameworks/kdbusaddons.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-05-16/kdbusaddons-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/kdbusaddons-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	dbus-run-session -- ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
ca7eeec94d55a7f5b65c4fa3cd26f0de31e669f00c4d4ea57a1cbd1e9d600775f70fc7a4b31877dbd42d33b6c6dd54430b3cbff648abbcfea09ee5e016c8b6c2  kdbusaddons-343bc2bcf6ae19eb7a0dc4be0b9768267c3683fd.tar.xz
"
