# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kdbusaddons
pkgver=99999_git20250125
pkgrel=0
_commit="972fe66ac6e51d6cd4ca5ef47de28df41db65844"
pkgdesc="Addons to QtDBus"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only OR LGPL-3.0-only"
makedepends="
	doxygen
	extra-cmake-modules
	graphviz
	qt6-qtbase-private-dev
	qt6-qttools-dev
	shared-mime-info
	samurai
	"
checkdepends="dbus"
_repo_url="https://invent.kde.org/frameworks/kdbusaddons.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-01-28/kdbusaddons-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kdbusaddons-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	dbus-run-session -- ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
60685f53387e809ddafe3fbbb02d65ebae4cf332f44e35f59fa0ce81447dd8527fecea922a1d5c7a7acbdc95cf9d4d410d5d279ea01add10c551f26adecedbad  kdbusaddons-972fe66ac6e51d6cd4ca5ef47de28df41db65844.tar.xz
"
