# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kdnssd
pkgver=9999_git20241202
pkgrel=0
_commit="61cf7552635e719b5961fddda3add68cbdea0fed"
arch="all !armhf" # armhf blocked by extra-cmake-modules
pkgdesc="Network service discovery using Zeroconf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later"
depends="avahi"
depends_dev="
	avahi-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kdnssd.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-12-04/kdnssd-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kdnssd-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
0e871e2ecfb4da317e1323e823b67fe205eb2e0236db785c9254128ba4e1ad8fcd4be6d2acfdd33b7a113e03c8c1872d327d8d51958e310298dfa2dfdaf6ce2b  kdnssd-61cf7552635e719b5961fddda3add68cbdea0fed.tar.xz
"
