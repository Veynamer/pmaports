# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kdnssd
pkgver=9999_git20241011
pkgrel=0
_commit="865a4145bf5d9f0c3245b29acc6bbe942ee1dbfe"
arch="all !armhf" # armhf blocked by extra-cmake-modules
pkgdesc="Network service discovery using Zeroconf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later"
depends="avahi"
depends_dev="
	avahi-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kdnssd.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-10-20/kdnssd-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kdnssd-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
a18716bcd476b73178a095a47c03c17cb9c3491b2a69c530bb4c4f176b07c18e98d1bbc5f8ebb59a9fa7ecc54454ff2c18665fbed610e9ae859d6b671980428f  kdnssd-865a4145bf5d9f0c3245b29acc6bbe942ee1dbfe.tar.xz
"
