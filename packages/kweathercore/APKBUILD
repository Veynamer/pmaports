# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=kweathercore
pkgver=9999_git20241202
pkgrel=0
_commit="d324a9df9a65074d66d7c2c48bfb2c7f6c74a94f"
pkgdesc="Library to facilitate retrieval of weather information including forecasts and alerts"
url="https://invent.kde.org/libraries/kweathercore"
arch="all !armhf" # armhf blocked by qt6-qtlocation-dev
license="LGPL-2.0-or-later AND CC-BY-4.0"
depends_dev="
	kholidays-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qtlocation-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/libraries/kweathercore.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-12-04/kweathercore-$_commit.tar.xz"
options="!check" # No tests
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/kweathercore-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
91bc985dd154c1cd733ba6f1bd2fa2e2f248e0e8b8315f8e8b78b87a5c45516a538dcb1d9c5e75c3b94b7602fd8b11627941c0a7e6f6a662a5eeda174700f57f  kweathercore-d324a9df9a65074d66d7c2c48bfb2c7f6c74a94f.tar.xz
"
