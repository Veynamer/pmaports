# group=3rdparty
maintainer="team/kde <bribbers@disroot.org>"
pkgname=libquotient
pkgver=9999_git20241220
pkgrel=0
_commit="757f3ce5ebe4055dbd60bfbf673a005f77e444de"
pkgdesc="Qt library for cross-platform clients for Matrix"
url="https://github.com/quotient-im/libQuotient"
arch="all"
license="LGPL-2.1-or-later"
depends_dev="
	olm-dev
	qt6-qtbase-dev
	qtkeychain-dev
	"
makedepends="$depends_dev
	cmake
	qt6-qtbase-private-dev
	samurai
	"
subpackages="$pkgname-dev"
_repo_url="https://github.com/quotient-im/libquotient.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-12-23/libquotient-$_commit.tar.xz"

options="!check"
builddir="$srcdir/libquotient-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_SHARED_LIBS=True \
		-DBUILD_TESTING=True \
		-DQuotient_INSTALL_TESTS=False
	cmake --build build
}

check() {
	# testolmaccount requires a running Matrix homeserver
	ctest --test-dir build -E "testolmaccount"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	# android only
	rm -r "$pkgdir"/usr/share/ndk-modules
}

sha512sums="
4ca23ff115f526b42e687605cbf07a59553fef7180fe1a625c9342f9fea5d3714868063fccffe759139cfeb060037baa40d3c15113327f157af0e1c8a5a5696f  libquotient-757f3ce5ebe4055dbd60bfbf673a005f77e444de.tar.xz
"
