# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>

# group=3rdparty
pkgname=libquotient
pkgver=9999_git20241020
pkgrel=0
_commit="2fd8b86f73705a68c4ba6c6028f9b08aa5ba877a"
pkgdesc="Qt library for cross-platform clients for Matrix"
url="https://github.com/quotient-im/libQuotient"
arch="all !armhf" # blocked by qt5-qtmultimedia
license="LGPL-2.1-or-later"
depends_dev="
	olm-dev
	qt6-qtbase-dev
	qtkeychain-dev
	"
makedepends="$depends_dev
	cmake
	samurai
	"
subpackages="$pkgname-dev"
_repo_url="https://github.com/quotient-im/libquotient.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-10-21/libquotient-$_commit.tar.xz"

options="!check"
builddir="$srcdir/libquotient-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_SHARED_LIBS=True \
		-DBUILD_TESTING=True \
		-DQuotient_INSTALL_TESTS=False
	cmake --build build
}

check() {
	# testolmaccount requires a running Matrix homeserver
	ctest --test-dir build --output-on-failure -E "testolmaccount"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	# android only
	rm -r "$pkgdir"/usr/share/ndk-modules
}

sha512sums="
3689d813a7c26d5de45e1fdd47b838db5204ac30e4e739a270218b82cc6d0e356a2c39f62c7b6cceebc8c9041c8075690979b2ea67cd2663480f403a6ec14d4a  libquotient-2fd8b86f73705a68c4ba6c6028f9b08aa5ba877a.tar.xz
"
