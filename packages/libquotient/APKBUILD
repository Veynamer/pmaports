# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>

# group=3rdparty
pkgname=libquotient
pkgver=9999_git20241023
pkgrel=0
_commit="dc34bdc8b11c6dc072380c89eba68e6916a2dc8c"
pkgdesc="Qt library for cross-platform clients for Matrix"
url="https://github.com/quotient-im/libQuotient"
arch="all !armhf" # blocked by qt5-qtmultimedia
license="LGPL-2.1-or-later"
depends_dev="
	olm-dev
	qt6-qtbase-dev
	qtkeychain-dev
	"
makedepends="$depends_dev
	cmake
	samurai
	"
subpackages="$pkgname-dev"
_repo_url="https://github.com/quotient-im/libquotient.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-10-23/libquotient-$_commit.tar.xz"

options="!check"
builddir="$srcdir/libquotient-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_SHARED_LIBS=True \
		-DBUILD_TESTING=True \
		-DQuotient_INSTALL_TESTS=False
	cmake --build build
}

check() {
	# testolmaccount requires a running Matrix homeserver
	ctest --test-dir build --output-on-failure -E "testolmaccount"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	# android only
	rm -r "$pkgdir"/usr/share/ndk-modules
}

sha512sums="
c0de6a9b1aa2ef8252716455eeacbca555d0c4802063f31a1ab059e67920f710478d76d587655af5c8137006c8f64692544958372ea945e91da5209b9781cc7b  libquotient-dc34bdc8b11c6dc072380c89eba68e6916a2dc8c.tar.xz
"
