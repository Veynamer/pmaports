# group=3rdparty
maintainer="team/kde <bribbers@disroot.org>"
pkgname=libquotient
pkgver=9999_git20241229
pkgrel=0
_commit="5d682d90bc01dd5bd4d03b80879934cdf3be4636"
pkgdesc="Qt library for cross-platform clients for Matrix"
url="https://github.com/quotient-im/libQuotient"
arch="all"
license="LGPL-2.1-or-later"
depends_dev="
	olm-dev
	qt6-qtbase-dev
	qtkeychain-dev
	"
makedepends="$depends_dev
	cmake
	qt6-qtbase-private-dev
	samurai
	"
subpackages="$pkgname-dev"
_repo_url="https://github.com/quotient-im/libquotient.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-01-03/libquotient-$_commit.tar.xz"

options="!check"
builddir="$srcdir/libquotient-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_SHARED_LIBS=True \
		-DBUILD_TESTING=True \
		-DQuotient_INSTALL_TESTS=False
	cmake --build build
}

check() {
	# testolmaccount requires a running Matrix homeserver
	ctest --test-dir build -E "testolmaccount"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	# android only
	rm -r "$pkgdir"/usr/share/ndk-modules
}

sha512sums="
f54676fa3ed2a482461f76f2dc95d0195e219c878e4444dcdd6f8ac99e05709ebf5384c86a418ea91726e3d00e8e60c2e87fe22b7c8db87098a3d8ec864a249d  libquotient-5d682d90bc01dd5bd4d03b80879934cdf3be4636.tar.xz
"
