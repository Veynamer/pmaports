# group=3rdparty
maintainer="team/kde <bribbers@disroot.org>"
pkgname=libquotient
pkgver=9999_git20241227
pkgrel=0
_commit="f10b1fd21045c92163d89eb593d588a7045aaad2"
pkgdesc="Qt library for cross-platform clients for Matrix"
url="https://github.com/quotient-im/libQuotient"
arch="all"
license="LGPL-2.1-or-later"
depends_dev="
	olm-dev
	qt6-qtbase-dev
	qtkeychain-dev
	"
makedepends="$depends_dev
	cmake
	qt6-qtbase-private-dev
	samurai
	"
subpackages="$pkgname-dev"
_repo_url="https://github.com/quotient-im/libquotient.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-12-28/libquotient-$_commit.tar.xz"

options="!check"
builddir="$srcdir/libquotient-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_SHARED_LIBS=True \
		-DBUILD_TESTING=True \
		-DQuotient_INSTALL_TESTS=False
	cmake --build build
}

check() {
	# testolmaccount requires a running Matrix homeserver
	ctest --test-dir build -E "testolmaccount"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	# android only
	rm -r "$pkgdir"/usr/share/ndk-modules
}

sha512sums="
f3139003d91d7ecfa7ca96be6b321c351567b53c46e7638489d2095fc1cafcc54a0d87127c0b62264b9b5f7db42d46d035847fa65f3091acd550025d2adebb71  libquotient-f10b1fd21045c92163d89eb593d588a7045aaad2.tar.xz
"
