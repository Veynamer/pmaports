# group=3rdparty
maintainer="team/kde <bribbers@disroot.org>"
pkgname=libquotient
pkgver=99999_git20250112
pkgrel=0
_commit="c191d56cec6cdb4362dc34882509bffaf8d0b614"
pkgdesc="Qt library for cross-platform clients for Matrix"
url="https://github.com/quotient-im/libQuotient"
arch="all"
license="LGPL-2.1-or-later"
depends_dev="
	olm-dev
	qt6-qtbase-dev
	qtkeychain-dev
	"
makedepends="$depends_dev
	cmake
	qt6-qtbase-private-dev
	samurai
	"
subpackages="$pkgname-dev"
_repo_url="https://github.com/quotient-im/libquotient.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-01-13/libquotient-$_commit.tar.xz"

options="!check"
builddir="$srcdir/libquotient-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_SHARED_LIBS=True \
		-DBUILD_TESTING=True \
		-DQuotient_INSTALL_TESTS=False
	cmake --build build
}

check() {
	# testolmaccount requires a running Matrix homeserver
	ctest --test-dir build -E "testolmaccount"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	# android only
	rm -r "$pkgdir"/usr/share/ndk-modules
}

sha512sums="
f8c222f85ad846da6553a8cd1b18d5d56a433cefd40933bb5b04185e75235eb83f66eaa3b1ba5c976dc2eb133cd2f9d699d9abda9791a1b37a53a76ddad73a91  libquotient-c191d56cec6cdb4362dc34882509bffaf8d0b614.tar.xz
"
