# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kfilemetadata
pkgver=99999_git20250524
pkgrel=0
_commit="5ba6c0347635a370b41d7bfcbc4b55c081ed9206"
pkgdesc="A library for extracting file metadata"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later AND ( LGPL-2.1-only OR LGPL-3.0-only )"
depends_dev="
	attr-dev
	exiv2-dev
	karchive-dev
	kcodecs-dev
	kconfig-dev
	kcoreaddons-dev
	ki18n-dev
	qt6-qtbase-dev
	taglib-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	ffmpeg-dev
	kde-qdoc-common
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kfilemetadata.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-05-25/kfilemetadata-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kfilemetadata-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	cmake --build build --target prepare_docs
	cmake --build build --target generate_docs
	cmake --build build --target generate_qch
}

check() {
	# Broken tests
	local skipped_tests="("
	local tests="
		usermetadatawritertest
		extractorcoveragetest
		propertyinfotest_localized
		extractorcollectiontest
		"
	for test in $tests; do
		skipped_tests="$skipped_tests|$test"
	done
	skipped_tests="$skipped_tests)test"
	ctest --test-dir build -E "$skipped_tests"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
dac03429f467e6e10463836bb294594923be9df93158fab8a7921ed679e350715baf14680f5c4b1951e265b08ab372724c0f80a06f8482f71772cc2beeefcb1f  kfilemetadata-5ba6c0347635a370b41d7bfcbc4b55c081ed9206.tar.xz
"
