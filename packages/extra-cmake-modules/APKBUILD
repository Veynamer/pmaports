# Contributor: Ivan Tham <pickfire@riseup.net>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=extra-cmake-modules
pkgver=99999_git20250205
pkgrel=0
_commit="64cf14a83af20d3d3f2f1e8f63f07fdf0b88eaaf"
pkgdesc="Extra CMake modules"
url="https://invent.kde.org/frameworks/extra-cmake-modules"
arch="noarch"
license="BSD-3-Clause"
depends="cmake"
makedepends="
	py3-sphinx
	qt6-qtbase-dev
	samurai
	"
checkdepends="
	qt6-qtdeclarative-dev
	qt6-qttools-dev
	"
_repo_url="https://invent.kde.org/frameworks/extra-cmake-modules.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-02-06/extra-cmake-modules-$_commit.tar.xz"
subpackages="$pkgname-doc"

options="!check"
builddir="$srcdir/extra-cmake-modules-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DSphinx_BUILD_EXECUTABLE=/usr/bin/sphinx-build \
		-DBUILD_QTHELP_DOCS=ON
	cmake --build build
}

check() {
	# KDEFetchTranslations expects KDE's git setup
	ctest --test-dir build --output-on-failure -E "KDEFetchTranslations"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
7071e965c4e3b749e16b359dc3ed303822c7223f48a43c40ce869f455abce0cd22b8ba32261eb38cc0a1f5d4fec0551ee8ecd56635d5287848cd320dd49a8cad  extra-cmake-modules-64cf14a83af20d3d3f2f1e8f63f07fdf0b88eaaf.tar.xz
"
