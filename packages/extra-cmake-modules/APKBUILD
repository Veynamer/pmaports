# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=extra-cmake-modules
pkgver=9999_git20250102
pkgrel=0
_commit="b26682a2c5fd245e31e9b5f8ce39af124c6ec686"
pkgdesc="Extra CMake modules"
url="https://invent.kde.org/frameworks/extra-cmake-modules"
arch="noarch"
license="BSD-3-Clause"
depends="cmake"
makedepends="
	py3-sphinx
	qt6-qtbase-dev
	samurai
	"
checkdepends="
	qt6-qtdeclarative-dev
	qt6-qttools-dev
	"
_repo_url="https://invent.kde.org/frameworks/extra-cmake-modules.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-01-03/extra-cmake-modules-$_commit.tar.xz"
subpackages="$pkgname-doc"

options="!check"
builddir="$srcdir/extra-cmake-modules-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DSphinx_BUILD_EXECUTABLE=/usr/bin/sphinx-build \
		-DBUILD_QTHELP_DOCS=ON
	cmake --build build
}

check() {
	# KDEFetchTranslations expects KDE's git setup
	ctest --test-dir build --output-on-failure -E "KDEFetchTranslations"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
29c0517e75f3c2bb8e815a8c2b6b2e3bf231cf7cbe437cf3269f5c5b0cd9b302cf48bc0961ee8e44f904708bf583b054ca09d638245cfccafe040b321f92bc5e  extra-cmake-modules-b26682a2c5fd245e31e9b5f8ce39af124c6ec686.tar.xz
"
