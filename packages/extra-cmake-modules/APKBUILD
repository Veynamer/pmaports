# Contributor: Ivan Tham <pickfire@riseup.net>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=extra-cmake-modules
pkgver=99999_git20250126
pkgrel=0
_commit="e5682c5ca2e3b73e8829cdb81c056070c60efd42"
pkgdesc="Extra CMake modules"
url="https://invent.kde.org/frameworks/extra-cmake-modules"
arch="noarch"
license="BSD-3-Clause"
depends="cmake"
makedepends="
	py3-sphinx
	qt6-qtbase-dev
	samurai
	"
checkdepends="
	qt6-qtdeclarative-dev
	qt6-qttools-dev
	"
_repo_url="https://invent.kde.org/frameworks/extra-cmake-modules.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-01-29/extra-cmake-modules-$_commit.tar.xz"
subpackages="$pkgname-doc"

options="!check"
builddir="$srcdir/extra-cmake-modules-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DSphinx_BUILD_EXECUTABLE=/usr/bin/sphinx-build \
		-DBUILD_QTHELP_DOCS=ON
	cmake --build build
}

check() {
	# KDEFetchTranslations expects KDE's git setup
	ctest --test-dir build --output-on-failure -E "KDEFetchTranslations"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
4ead2bfc0022db0a86045f699e0a259c697086c404cb1ce07b05f4ee29e856f987b94dfa8291630f86e3b68ff8a45f849242355f85e345cda3d12efd0102f18c  extra-cmake-modules-e5682c5ca2e3b73e8829cdb81c056070c60efd42.tar.xz
"
