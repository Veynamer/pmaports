# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kpkpass
pkgver=9999_git20241026
pkgrel=0
_commit="a2d5595bd2034a2d3f59b8d0366773ca4a4ca1d5"
arch="all !armhf"
url="https://kontact.kde.org/"
pkgdesc="Apple Wallet Pass reader"
license="GPL-2.0-or-later"
depends_dev="
	karchive-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	shared-mime-info
	"
_repo_url="https://invent.kde.org/pim/kpkpass.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-10-27/kpkpass-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/kpkpass-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
ac0adc28248258a6f9afbfade87cbf881f5a9742dc7d607b0b5e102aa1255d890d5b65dd4856d104aa685a13ec8aef91f448dd357e5eac9be44f73fa32d77c47  kpkpass-a2d5595bd2034a2d3f59b8d0366773ca4a4ca1d5.tar.xz
"
