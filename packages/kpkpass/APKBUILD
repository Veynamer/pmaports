# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kpkpass
pkgver=99999_git20250503
pkgrel=0
_commit="f480e1e3e9c9e068833a9414750a8922cd63034d"
arch="all !armhf"
url="https://kontact.kde.org/"
pkgdesc="Apple Wallet Pass reader"
license="GPL-2.0-or-later"
depends_dev="
	karchive-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	shared-mime-info
	"
_repo_url="https://invent.kde.org/pim/kpkpass.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-05-13/kpkpass-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/kpkpass-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
f784f829b72bce0441a1f47975f749398574a9500ba6891c076519331cff522456a92a0bc37b5d717ebfba7ba28181c549abccc7627bb5ca87cd94f606799331  kpkpass-f480e1e3e9c9e068833a9414750a8922cd63034d.tar.xz
"
