# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kolourpaint
pkgver=99999_git20250331
pkgrel=0
_commit="0739aea7f3ad6b42bd33d0006687de0cd088ec45"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="http://www.kolourpaint.org/"
pkgdesc="An easy-to-use paint program"
license="BSD-2-Clause AND LGPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules

	kdoctools-dev
	kguiaddons-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	kitemmodels-dev
	ktextwidgets-dev
	kwidgetsaddons-dev
	kxmlgui-dev
	libksane-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/graphics/kolourpaint.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-04-02/kolourpaint-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kolourpaint-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
7fe01b365ae77cc14c397905a014d35bc759fd9a7bce445fd9a4e8e6378f006507d80ff9dda829b615af28bc6f1e1226f06cd854ac3fef6d647bc399501f2c1c  kolourpaint-0739aea7f3ad6b42bd33d0006687de0cd088ec45.tar.xz
"
