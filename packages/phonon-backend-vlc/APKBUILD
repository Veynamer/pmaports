# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=phonon-backend-vlc
pkgver=99999_git20250221
pkgrel=0
_commit="5ba123afc6ea6f03c464e90206be540797fe705f"
pkgdesc="Phonon VLC backend"
url="https://userbase.kde.org/Phonon"
# armhf blocked by extra-cmake-modules
# s390x blocked by vlc
arch="all !armhf !s390x"
license="LGPL-2.1-or-later"
makedepends="
	extra-cmake-modules
	phonon-dev
	qt5-qtbase-dev
	qt5-qttools-dev
	qt6-qtbase-dev
	qt6-qttools-dev
	samurai
	vlc-dev
	"
subpackages="$pkgname-qt5 $pkgname-qt6"
_repo_url="https://invent.kde.org/libraries/phonon-vlc.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-02-23/phonon-vlc-$_commit.tar.xz"
options="!check" # No tests available

options="!check"
builddir="$srcdir/phonon-vlc-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

qt5() {
	amove usr/lib/qt5/plugins/phonon4qt5_backend
}

qt6() {
	amove usr/lib/qt6/plugins/phonon4qt6_backend
}

sha512sums="
0d421d433c3320d9bf4de17114637e55b9abb912362b79da7890e6950d970369b882fa9741d45c172a65dc0e467eefcb1448c104c4886290495daeba1db53550  phonon-vlc-5ba123afc6ea6f03c464e90206be540797fe705f.tar.xz
"
