# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=phonon-backend-vlc
pkgver=99999_git20250212
pkgrel=0
_commit="7711fbc23e9b3c78000a5a26d688dac72cb85eed"
pkgdesc="Phonon VLC backend"
url="https://userbase.kde.org/Phonon"
# armhf blocked by extra-cmake-modules
# s390x blocked by vlc
arch="all !armhf !s390x"
license="LGPL-2.1-or-later"
makedepends="
	extra-cmake-modules
	phonon-dev
	qt5-qtbase-dev
	qt5-qttools-dev
	qt6-qtbase-dev
	qt6-qttools-dev
	samurai
	vlc-dev
	"
subpackages="$pkgname-qt5 $pkgname-qt6"
_repo_url="https://invent.kde.org/libraries/phonon-vlc.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-02-12/phonon-vlc-$_commit.tar.xz"
options="!check" # No tests available

options="!check"
builddir="$srcdir/phonon-vlc-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

qt5() {
	amove usr/lib/qt5/plugins/phonon4qt5_backend
}

qt6() {
	amove usr/lib/qt6/plugins/phonon4qt6_backend
}

sha512sums="
3d951782a518eea4a5aef482a69eb52cf536e140074c632428fba8ac9950c9870e52216ad58ac581a5114a61e34b4a0343d55132ed1ee0ac9b021ccb6d094bbe  phonon-vlc-7711fbc23e9b3c78000a5a26d688dac72cb85eed.tar.xz
"
