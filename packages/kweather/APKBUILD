# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kweather
pkgver=99999_git20250208
pkgrel=0
_commit="7da888e9efd7fe9c523874b780b043ed1afe6263"
pkgdesc="Weather application for Plasma Mobile"
url="https://invent.kde.org/plasma-mobile/kweather"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
license="GPL-2.0-or-later AND CC-BY-4.0"
depends="
	kirigami-addons
	kirigami
	kquickcharts
	"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kcoreaddons-dev
	ki18n-dev
	kirigami-addons-dev
	kirigami-dev
	knotifications-dev
	kquickcharts-dev
	kweathercore-dev
	libplasma-dev
	qt6-qtbase-dev
	qt6-qtcharts-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtsvg-dev
	samurai
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/utilities/kweather.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-02-11/kweather-$_commit.tar.xz"
options="!check" # No tests

options="!check"
builddir="$srcdir/kweather-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

