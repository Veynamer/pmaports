# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=minuet
pkgver=9999_git20241203
pkgrel=0
_commit="ca4b71d5dda63bde72e2a8cbac91e467b1542eec"
arch="all !armhf" # armhf blocked by qt6-qtdeclarative
url="https://minuet.kde.org/"
pkgdesc="Minuet Music Education"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	fluidsynth-dev
	kcoreaddons-dev
	kcrash-dev
	kdoctools-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev

	qt6-qtsvg-dev
	samurai
	"
_repo_url="https://invent.kde.org/education/minuet.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-12-04/minuet-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang $pkgname-dev"
options="!check" # No tests

options="!check"
builddir="$srcdir/minuet-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
4228d08ca2bbb7e08d5c0e1e339115a6ff1f2fadeb8ee9d10ec97adf77c9aade136ebdc6af098e87c5a124e2651b096fc9ebdff7abffb93d82383c447f85c28e  minuet-ca4b71d5dda63bde72e2a8cbac91e467b1542eec.tar.xz
"
