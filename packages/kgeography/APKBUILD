# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kgeography
pkgver=9999_git20241031
pkgrel=0
_commit="d02d9d9a56c6eb21e094bc5911b8e7e524e2672f"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://edu.kde.org/kgeography"
pkgdesc="Geography Trainer"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	kconfigwidgets-dev
	kcoreaddons-dev
	kcrash-dev
	kdoctools-dev
	ki18n-dev
	kiconthemes-dev
	kitemviews-dev
	kwidgetsaddons-dev
	kxmlgui-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/education/kgeography.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-11-01/kgeography-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kgeography-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
5b2d2b516cc40f8722c30f5a9535316a9da275885fbdb73d7c13c52d45f941fdbac3a351e2c3f08dbe6a9f5487117856b1fa90382d52ada8c64a32b85178f49c  kgeography-d02d9d9a56c6eb21e094bc5911b8e7e524e2672f.tar.xz
"
