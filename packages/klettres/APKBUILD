# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=klettres
pkgver=99999_git20250403
pkgrel=0
_commit="9124b0d52f9a6c9d9614251edbbdf66f80d81d66"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://edu.kde.org/klettres"
pkgdesc="Learn the Alphabet"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kcompletion-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kcrash-dev
	kdoctools-dev
	ki18n-dev
	knewstuff-dev
	kwidgetsaddons-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	samurai
	"
_repo_url="https://invent.kde.org/education/klettres.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-04-06/klettres-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/klettres-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
d1cb21f4150bf6e90087131476c28a066e7ebfb5c40c3bdf02038147110854c29cc5ed12c96bf6ee590172af27614afd7c5bcb68fdba52aac1f4384eabeeaae4  klettres-9124b0d52f9a6c9d9614251edbbdf66f80d81d66.tar.xz
"
