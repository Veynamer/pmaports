# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=klettres
pkgver=99999_git20250308
pkgrel=0
_commit="57bbbfeccf5cc712af84baf75779e53945d36bf8"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://edu.kde.org/klettres"
pkgdesc="Learn the Alphabet"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kcompletion-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kcrash-dev
	kdoctools-dev
	ki18n-dev
	knewstuff-dev
	kwidgetsaddons-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	samurai
	"
_repo_url="https://invent.kde.org/education/klettres.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-03-24/klettres-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/klettres-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
af6b894afafd0beffed0defb56a9e66f6e6633708cf06bf9e14c3daf6751fc2ef288031a502cbd7269e61eefc36b960166084e73afbc6beba586e0a2685c57c7  klettres-57bbbfeccf5cc712af84baf75779e53945d36bf8.tar.xz
"
