# Maintainer: Bart Ribbers <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=plasma-camera
pkgver=99999_git20241225
pkgrel=0
_commit="73a24073b5a27474e7a8f0ca33d6835ff661dd96"
pkgdesc="Camera application for Plasma Mobile"
# armhf blocked by qt5-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/plasma-mobile/plasma-camera"
license="GPL-3.0-or-later AND BSD-3-Clause"
depends="
	gst-plugins-bad
	gst-plugins-good
	kirigami
	qt6-qtmultimedia
	"
makedepends="
	extra-cmake-modules
	kcoreaddons-dev
	ki18n-dev
	kirigami-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	samurai
	"
checkdepends="appstream"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/plasma-mobile/plasma-camera.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-01-13/plasma-camera-$_commit.tar.xz"
builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
3742d98a897df09a8d176130e7056aad2e036ceffa3d6da2ba4079abef9d6e67ff9bff1fab3e71dacc37f149666e08af3406830d211ee6eab4e09c9c63fdbc29  plasma-camera-73a24073b5a27474e7a8f0ca33d6835ff661dd96.tar.xz
"
