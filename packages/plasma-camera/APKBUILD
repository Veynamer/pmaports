# Maintainer: Bart Ribbers <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=plasma-camera
pkgver=9999_git20241202
pkgrel=0
_commit="edfb27a2730598f29fe9d14d90c870443859892b"
pkgdesc="Camera application for Plasma Mobile"
# armhf blocked by qt5-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/plasma-mobile/plasma-camera"
license="GPL-3.0-or-later AND BSD-3-Clause"
depends="
	gst-plugins-bad
	gst-plugins-good
	kirigami
	qt6-qtmultimedia
	"
makedepends="
	extra-cmake-modules
	kcoreaddons-dev
	ki18n-dev
	kirigami-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	samurai
	"
checkdepends="appstream"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/plasma-mobile/plasma-camera.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-12-04/plasma-camera-$_commit.tar.xz"
builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
e432cd3c5fc6fc04a5d2e35d8a761af7728c86df2e50227009cc0df28bf1f00aa821215a1a850545e344e23161719af4654cb48fef414bf240d43b1f85fe15dc  plasma-camera-edfb27a2730598f29fe9d14d90c870443859892b.tar.xz
"
