# Maintainer: Bart Ribbers <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=plasma-camera
pkgver=9999_git20241111
pkgrel=0
_commit="32d7418d0d18363f9de71c022d51799472df579e"
pkgdesc="Camera application for Plasma Mobile"
# armhf blocked by qt5-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/plasma-mobile/plasma-camera"
license="GPL-3.0-or-later AND BSD-3-Clause"
depends="
	gst-plugins-bad
	gst-plugins-good
	kirigami
	qt6-qtmultimedia
	"
makedepends="
	extra-cmake-modules
	kcoreaddons-dev
	ki18n-dev
	kirigami-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	samurai
	"
checkdepends="appstream"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/plasma-mobile/plasma-camera.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-11-12/plasma-camera-$_commit.tar.xz"
builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
a43812d39f216631412492cbd496ee0ec613a4eb6369c6f4738a8172b5155846f5d3c8e8f08c09f4722bfb527b7aa1a4f62491e33d2acf39265ad47eac3dddba  plasma-camera-32d7418d0d18363f9de71c022d51799472df579e.tar.xz
"
