# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kapidox
pkgver=99999_git20250103
pkgrel=0
_commit="1e2523224bcaffd04f75dafb3fc1bb33b31ef9b2"
arch="noarch !armhf" # armhf blocked by extra-cmake-modules
pkgdesc="Scripts and data for building API documentation (dox) in a standard format and style"
url="https://community.kde.org/Frameworks"
license="BSD-3-Clause"
depends="
	doxygen
	py3-jinja2
	py3-yaml
	python3
	"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel
	python3-dev
	samurai
	"
checkdepends="bash"
subpackages="$pkgname-pyc"
_repo_url="https://invent.kde.org/frameworks/kapidox.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-01-21/kapidox-$_commit.tar.xz"
options="!check" # No useful tests

options="!check"
builddir="$srcdir/kapidox-$_commit"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
151dcc48d423fd7cd0f07a7a8f2fb4e697313064b25af540e690880072bc188c39e36b31526fe9b2168abafcd7cf26962e2a1355dd0e0b4fcb4d4192eabe6c14  kapidox-1e2523224bcaffd04f75dafb3fc1bb33b31ef9b2.tar.xz
"
