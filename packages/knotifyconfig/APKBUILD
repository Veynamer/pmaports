# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=knotifyconfig
pkgver=9999_git20241206
pkgrel=0
_commit="7ded91c3c1e8c5df3dba9575f8c2a14607399e7d"
pkgdesc="Configuration system for KNotify"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-only"
depends_dev="
	kcompletion-dev
	kconfig-dev
	ki18n-dev
	kio-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/knotifyconfig.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-01-02/knotifyconfig-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/knotifyconfig-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
59b5e7e37ac2f6e49b5eb0cbbd1317b717b438d802af4cb3743bde1a1470759150d5451f771215f6f2c6c9516746c66bf948b127b000cc612ca9373f4908a007  knotifyconfig-7ded91c3c1e8c5df3dba9575f8c2a14607399e7d.tar.xz
"
