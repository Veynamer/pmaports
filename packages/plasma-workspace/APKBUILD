subpackages="
	$pkgname-dbg
	$pkgname-dev
	$pkgname-libs
	$pkgname-doc
	$pkgname-lang
	$pkgname-zsh-completion
	"
_repo_url="https://invent.kde.org/plasma/plasma-workspace.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-12-07/plasma-workspace-$_commit.tar.xz"

replaces="plasma5support"

options="!check"
builddir="$srcdir/plasma-workspace-$_commit"

build() {
	# reduce size of debug syms
	CFLAGS="$CFLAGS -O2 -g1" CXXFLAGS="$CXXFLAGS -O2 -g1" \
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DPLASMA_X11_DEFAULT_SESSION=OFF \
		-DINSTALL_SDDM_WAYLAND_SESSION=ON
	cmake --build build
}

check() {
	# nightcolortest requires running dbus
	# testdesktop, lookandfeel-kcmTest, test_kio_fonts, servicerunnertest systemtraymodeltest are broken
	# tst_triangleFilter requires plasma-workspace to be installed
	# locationsrunnertest requires a running Wayland environment
	local skipped_tests="(nightcolortest"
	local tests="
		testdesktop
		lookandfeel-kcmTest
		test_kio_fonts
		servicerunnertest
		systemtraymodeltest
		tst_triangleFilter
		locationsrunnertest
		"
	case "$CARCH" in
		arm*|aarch64|ppc64le) tests="$tests calculatorrunnertest" ;;
	esac
	for test in $tests; do
		skipped_tests="$skipped_tests|$test"
	done
	skipped_tests="$skipped_tests)"
	xvfb-run ctest --test-dir build -E "$skipped_tests"
}

package() {
	DESTDIR="$pkgdir" cmake --install build

	# We don't ship systemd
	rm -r "$pkgdir"/usr/lib/systemd

	if [ -d "$pkgdir"/home ]; then
		rm -r "${pkgdir:?}"/home
	fi

	# Remove X11 support
	rm \
		"$pkgdir"/usr/bin/startplasma-x11 \
		"$pkgdir"/usr/share/xsessions/plasmax11.desktop
}

