# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=plasma-mobile-sounds
pkgver=9999_git20241220
pkgrel=0
_commit="aea0ed0ff073e8f6fd1cd57200d3a8416a80d060"
pkgdesc="Sounds for Plasma Mobile devices"
url="https://invent.kde.org/plasma-mobile/plasma-mobile-sounds"
# armhf blocked by extra-cmake-modules
arch="noarch !armhf"
license="CC-BY-4.0 AND CC-BY-SA-4.0 AND CC0-1.0"
makedepends="
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/plasma-mobile/plasma-mobile-sounds.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-12-27/plasma-mobile-sounds-$_commit.tar.xz"
options="!check" # No code to test

options="!check"
builddir="$srcdir/plasma-mobile-sounds-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
