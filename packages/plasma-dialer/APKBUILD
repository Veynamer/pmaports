# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=plasma-dialer
pkgver=99999_git20250109
pkgrel=0
_commit="c5ff52c0172ab9334b66b8df017ed20fbc80ea4a"
pkgdesc="A dialer for Plasma Mobile"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://invent.kde.org/plasma-mobile/plasma-dialer"
license="GPL-2.0-or-later"
depends="
	kirigami-addons
	kirigami
	oxygen-sounds
	"
makedepends="
	callaudiod-dev
	extra-cmake-modules
	kcontacts-dev
	kcoreaddons-dev
	kdbusaddons-dev
	ki18n-dev
	kio-dev
	kirigami-addons-dev
	knotifications-dev
	kpeople-dev
	libphonenumber-dev
	modemmanager-qt-dev
	plasma-wayland-protocols
	pulseaudio-qt-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtwayland-dev
	qtmpris-dev
	samurai
	"
subpackages="$pkgname-dbg $pkgname-lang"
_repo_url="https://invent.kde.org/plasma-mobile/plasma-dialer.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-01-15/plasma-dialer-$_commit.tar.xz"
options="!check" # No tests

options="!check"
builddir="$srcdir/plasma-dialer-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
3825c4ce2b0a625704defb00fba7796c29a8923a12afcbf179cfe2730fa2ebd857bf279faf0bde9925bf8f5168e0278e58cb1941fb80616acddb911e9b98b8ce  plasma-dialer-c5ff52c0172ab9334b66b8df017ed20fbc80ea4a.tar.xz
"
