# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kcolorscheme
pkgver=99999_git20250524
pkgrel=0
_commit="78c7df7b67e25215c37cbba2cd6583921ee23f97"
pkgdesc="Classes to read and interact with KColorScheme"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later AND LGPL-2.0-only AND LGPL-2.1-or-later"
makedepends="
	doxygen
	extra-cmake-modules
	graphviz
	kconfig-dev
	kde-qdoc-common
	kguiaddons-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kcolorscheme.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-06-03/kcolorscheme-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/kcolorscheme-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}
sha512sums="
ed764f891aa7b2b29994c166f824d459652ccc2ec65fea233e91d79da905cf5410c4895c9eb2791f65f73ec361d7a4daeb69d3856e55eebc4ea524f6b5e7c9ab  kcolorscheme-78c7df7b67e25215c37cbba2cd6583921ee23f97.tar.xz
"
