# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=kid3
pkgver=9999_git20241225
pkgrel=0
_commit="dbd4be988015d57e97f87265473f2820b72cfd11"
pkgdesc="Efficient audio tagger that supports a large variety of file formats"
url="https://kid3.kde.org/"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
license="GPL-2.0-or-later"
makedepends="
	chromaprint-dev
	extra-cmake-modules
	ffmpeg-dev
	flac-dev
	id3lib-dev
	libvorbis-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtmultimedia-dev
	qt6-qtsvg-dev
	qt6-qttools-dev
	readline-dev
	samurai
	taglib-dev
	zlib-dev
	"
subpackages="$pkgname-doc"
_repo_url="https://invent.kde.org/multimedia/kid3.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-01-03/kid3-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kid3-$_commit"

build() {
	CXXFLAGS="$CXXFLAGS -flto=auto" \
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DWITH_APPS="qt;qml;cli"
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
c4ee8b9ff970b37cc21d33518320af86ae455948eda56ce788708c3e61c3e3599d470a5fd4d1c31452f34bb7800bcab65ba09b08a5aa460ff1b9eae4f90bb53c  kid3-dbd4be988015d57e97f87265473f2820b72cfd11.tar.xz
"
