# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kdoctools
pkgver=99999_git20250606
pkgrel=0
_commit="2036fd12bd199bdacb8840065dbf5ce77020bce4"
pkgdesc="Documentation generation from docbook"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only OR LGPL-3.0-only"
depends="
	docbook-xml
	docbook-xsl
	"
depends_dev="
	karchive-dev
	ki18n-dev
	libxml2-dev
	libxml2-utils
	libxslt-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	perl-uri
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kdoctools.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-06-09/kdoctools-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"

options="!check"
builddir="$srcdir/kdoctools-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
dab33b00599a363080a790bde083091ff652a59516db0514a600ae34edb2fc930c0cb5e55927b2d7b3f017c5ff2d10a488409a5bead12143492dad77f742bc6d  kdoctools-2036fd12bd199bdacb8840065dbf5ce77020bce4.tar.xz
"
