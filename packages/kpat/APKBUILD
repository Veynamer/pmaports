# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kpat
pkgver=9999_git20241018
pkgrel=0
_commit="fa856f5e4f92fb0c2a000fdb630511923469e62f"
pkgdesc="KPatience offers a selection of solitaire card games"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/games/kpat/"
license="GPL-2.0-or-later AND GFDL-1.2-only"
depends="carddecks"
makedepends="
	black-hole-solver-dev
	extra-cmake-modules
	freecell-solver-dev
	kcompletion-dev
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kdoctools-dev
	kguiaddons-dev
	ki18n-dev
	kio-dev
	knewstuff-dev
	kwidgetsaddons-dev
	kxmlgui-dev
	libkdegames-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/games/kpat.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-10-20/kpat-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
# Broken tests
options="!check"

options="!check"
builddir="$srcdir/kpat-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
