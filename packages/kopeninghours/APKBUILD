# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kopeninghours
pkgver=99999_git20250511
pkgrel=0
_commit="6f65463a7555daff6c530d71907b22675d609c98"
pkgdesc="Library for parsing and evaluating OSM opening hours expressions"
url="https://invent.kde.org/libraries/kopeninghours"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
license="BSD-3-Clause AND CC0-1.0 AND LGPL-2.0-or-later"
makedepends="
	bison
	doxygen
	extra-cmake-modules
	flex
	graphviz
	kholidays-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qttools-dev
	samurai
	"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
_repo_url="https://invent.kde.org/libraries/kopeninghours.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-05-13/kopeninghours-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kopeninghours-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON \
		-DBUILD_WITH_QT6=ON
	cmake --build build
}

check() {
	# evaluatetest and iterationtest are broken
	ctest --test-dir -E "(evaluate|iteration)test"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
be03485fb5e84f80712a6b7bbee2dae244ce38984445abb7ce6201579df3127fd227b4e16aae5da10fe9c7c5f9762e7cd5fd8892dca29e5046482fb9e9312844  kopeninghours-6f65463a7555daff6c530d71907b22675d609c98.tar.xz
"
