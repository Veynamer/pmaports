# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=kgamma5
pkgver=9999_git20241120
pkgrel=0
_commit="b1b5a1efd9c7d1bb886861636ed1a3bee33eba67"
pkgdesc="Adjust your monitor's gamma settings"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kconfig-dev
	kconfigwidgets-dev
	kdoctools-dev
	ki18n-dev
	qt6-qtbase-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/kgamma5.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-11-20/kgamma5-$_commit.tar.xz"
subpackages="$pkgname-doc"

options="!check"
builddir="$srcdir/kgamma5-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
1478040af6f15a2f3782bd582546bbc98673357f341298ae227f12db368386de423fa113774be51ad220d3303406a079bb0dc28bcd879b2ede3badb549515a2a  kgamma5-b1b5a1efd9c7d1bb886861636ed1a3bee33eba67.tar.xz
"
