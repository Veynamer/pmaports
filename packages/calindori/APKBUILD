# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=calindori
pkgver=99999_git20250304
pkgrel=0
_commit="6b7e56304bef87067347a87465b979f9a06b3788"
pkgdesc="Calendar for Plasma Mobile"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/plasma-mobile/calindori"
license="GPL-3.0-or-later AND LGPL-3.0-or-later AND BSD-2-Clause AND CC-BY-SA-4.0 AND CC0-1.0"
depends="kirigami"
makedepends="
	extra-cmake-modules
	kcalendarcore-dev
	kconfig-dev
	ki18n-dev
	kirigami-dev
	kpeople-dev
	libplasma-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/plasma-mobile/calindori.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-03-04/calindori-$_commit.tar.xz"
subpackages="$pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/calindori-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

