# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=bovo
pkgver=9999_git20241113
pkgrel=0
_commit="926d9761deafab9689f95e6b8027926a9d05ed03"
pkgdesc="A Gomoku like game for two players"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/games/org.kde.bovo"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kdoctools-dev
	kxmlgui-dev
	libkdegames-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	samurai
	"
_repo_url="https://invent.kde.org/games/bovo.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-11-14/bovo-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/bovo-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
b3bf6090bafc9d30a00ae3d0b785f1028ebfc3e61b4fc4e9018d43c8c047bfc7de024e1ce229c63fd2e19c81fe64e56826ca664f8c5aba9ede2822bf808ad28d  bovo-926d9761deafab9689f95e6b8027926a9d05ed03.tar.xz
"
