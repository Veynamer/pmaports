# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=plasma-nm
pkgver=99999_git20250506
pkgrel=0
_commit="a0e646f2536074512431c6e20eb1496a38ef736c"
pkgdesc="Plasma applet written in QML for managing network connections"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="(LGPL-2.1-only OR LGPL-3.0-only) AND LGPL-2.0-or-later"
depends="
	kirigami
	networkmanager
	"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kcompletion-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kdeclarative-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	knotifications-dev
	kservice-dev
	ksvg-dev
	kwallet-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	libplasma-dev
	mobile-broadband-provider-info
	modemmanager-qt-dev
	networkmanager-qt-dev
	prison-dev
	qca-qt6-dev
	qcoro-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	samurai
	solid-dev
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/plasma-nm.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-05-06/plasma-nm-$_commit.tar.xz"
subpackages="$pkgname-lang "

options="!check"
builddir="$srcdir/plasma-nm-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib	
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

mobile() {
	pkgdesc="$pkgdesc (mobile KCM's)"
	depends="$depends $pkgname"

	amove usr/share/kpackage
	amove usr/lib/qt6/plugins/kcms
}

sha512sums="
55b4f7ec0907e1503992af323e8979b4214dc82d5d37349b9a183564560c265e5c9977eac54661e0b498ac72b2bfb9cb4ee64eb90cf7baa5b953da99b4f8f9c2  plasma-nm-a0e646f2536074512431c6e20eb1496a38ef736c.tar.xz
"
