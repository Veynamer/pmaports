# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=knotifications
pkgver=99999_git20250531
pkgrel=0
_commit="32fb4873643ae639f88a913b1f92587407cb3860"
pkgdesc="Abstraction for system notifications"
arch="all"
url="https://community.kde.org/Frameworks"
license="BSD-3-Clause AND LGPL-2.0-or-later AND LGPL-2.0-only AND (LGPL-2.1-only OR LGPL-3.0-only)"
depends_dev="
	kconfig-dev
	kcoreaddons-dev
	kwindowsystem-dev
	libcanberra-dev
	phonon-dev
	qt6-qtbase-dev
	qt6-qtspeech-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	py3-build
	py3-setuptools
	py3-shiboken6
	pyside6-dev
	python3-dev
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/knotifications.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-06-03/knotifications-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang py3-$pkgname:_py3"

options="!check"
builddir="$srcdir/knotifications-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	cmake --build build --target prepare_docs
	cmake --build build --target generate_docs
	cmake --build build --target generate_qch
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

_py3() {
	amove usr/lib/python*
}

sha512sums="
3dedd25836d843de62216e4c7546da06a4aa549b031ac3bef8dff42ff26a87a715f4c3e35adc35fa4eb9a7975d15a2c745d66d704bfe6836e73d72d6adfa9294  knotifications-32fb4873643ae639f88a913b1f92587407cb3860.tar.xz
"
