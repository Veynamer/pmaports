# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=ki18n
pkgver=99999_git20250518
pkgrel=0
_commit="72bda27f588c6c3b9960ca1eb8aa48c3cbb2cc7f"
pkgdesc="Advanced internationalization framework"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later AND (LGPL-2.1-only OR LGPL-3.0-or-later)"
depends_dev="
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	doxygen
	graphviz
	kde-qdoc-common
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/ki18n.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-05-22/ki18n-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/ki18n-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	cmake --build build --target prepare_docs
	cmake --build build --target generate_docs
	cmake --build build --target generate_qch
}

check() {
	# ki18n-klocalizedstringtest, kcountrytest, kcountrysubdivisiontest and kcatalogtest are broken
	xvfb-run ctest --test-dir build -E "(ki18n-klocalizedstring|kcountry|kcountrysubdivision|kcatalog)test"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
51c0bb89006f8f0e5ac85c53c5ec4a2008191593f4245607ffa84e6168da4177a79e234a3a8f5a69fe8355eec721c32a3a8aae7afcf1e64405d522d1cffb412b  ki18n-72bda27f588c6c3b9960ca1eb8aa48c3cbb2cc7f.tar.xz
"
