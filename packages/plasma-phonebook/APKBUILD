# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-mobile
maintainer="team/kde <bribbers@disroot.org>"
pkgname=plasma-phonebook
pkgver=99999_git20241225
pkgrel=0
_commit="79873c58fbc29c4a9f5482f2a9a24709d9ef9b28"
pkgdesc="Contacts application which allows adding, modifying and removing contacts"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/plasma-mobile/plasma-phonebook"
license="LicenseRef-KDE-Accepted-GPL"
depends="
	kirigami-addons
	kirigami
	qt6-qtbase-sqlite
	"
makedepends="
	extra-cmake-modules
	kcontacts-dev
	kcoreaddons-dev
	kirigami-addons-dev
	kirigami-dev
	kpeople-dev
	kpeoplevcard-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtsvg-dev
	samurai
	"
_repo_url="https://invent.kde.org/plasma-mobile/plasma-phonebook.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-02-03/plasma-phonebook-$_commit.tar.xz"
subpackages="$pkgname-lang"
options="!check" # No tests

builddir="$srcdir/plasma-phonebook-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
491ab02bf021b12c969e323bfdce64f22b1955748863cd7a6c3735efc1089624ecd204051132e6c6a8cdd35b828e2bff59ad8ab5836d831066c4938fb11f2f8b  plasma-phonebook-79873c58fbc29c4a9f5482f2a9a24709d9ef9b28.tar.xz
"
