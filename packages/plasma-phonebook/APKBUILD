# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-mobile
maintainer="team/kde <bribbers@disroot.org>"
pkgname=plasma-phonebook
pkgver=99999_git20250215
pkgrel=0
_commit="f34d8371bff860d76af822da065565a74a2808ee"
pkgdesc="Contacts application which allows adding, modifying and removing contacts"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/plasma-mobile/plasma-phonebook"
license="LicenseRef-KDE-Accepted-GPL"
depends="
	kirigami-addons
	kirigami
	qt6-qtbase-sqlite
	"
makedepends="
	extra-cmake-modules
	kcontacts-dev
	kcoreaddons-dev
	kirigami-addons-dev
	kirigami-dev
	kpeople-dev
	kpeoplevcard-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtsvg-dev
	samurai
	"
_repo_url="https://invent.kde.org/plasma-mobile/plasma-phonebook.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-02-23/plasma-phonebook-$_commit.tar.xz"
subpackages="$pkgname-lang"
options="!check" # No tests

builddir="$srcdir/plasma-phonebook-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
7c57c6b6cd13251216a4f2595d50985bfc996ea2645be421cca24c3c4fa7badf8e9f228b4bb09c9760ba5c59770efe25cf8d417a3d40ac724cc197bba1eef694  plasma-phonebook-f34d8371bff860d76af822da065565a74a2808ee.tar.xz
"
