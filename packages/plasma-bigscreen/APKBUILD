# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=plasma-bigscreen
pkgver=9999_git20241020
pkgrel=0
_commit="ee7855462663b4860299d887b534939cf72ef35e"
pkgdesc="A 10-feet interface made for TVs"
url="https://invent.kde.org/plasma/plasma-bigscreen/"
# armhf blocked by qt5-qtdeclarative
arch="all !armhf"
license="LGPL-2.1-only OR LGPL-3.0-only OR LicenseRef-KDE-Accepted-LGPL"
depends="
	kde-cli-tools
	kdeconnect
	kirigami
	plasma-nano
	plasma-nm
	plasma-pa
	plasma-remotecontrollers
	plasma-settings
	plasma-workspace
	"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kdeclarative-dev
	ki18n-dev
	kio-dev
	kirigami-dev
	knotifications-dev
	kwayland-dev
	kwindowsystem-dev
	libplasma-dev
	plasma-activities-dev
	plasma-activities-stats-dev
	plasma-workspace-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtmultimedia-dev
	samurai
	"
subpackages="$pkgname-lang"
case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/plasma-bigscreen.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-10-20/plasma-bigscreen-$_commit.tar.xz"

options="!check"
builddir="$srcdir/plasma-bigscreen-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
c4abcc55f31d4325af8bc9a30c05cbc11e9037b6a0f3ca17672fd71dd0446eb528daa57133e277f15f91d5c482879a44afa3c37afd6f820beffeea49c2d600b7  plasma-bigscreen-ee7855462663b4860299d887b534939cf72ef35e.tar.xz
"
