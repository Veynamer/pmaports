# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=plasma-bigscreen
pkgver=99999_git20250603
pkgrel=0
_commit="759049cd2124f361f1b633d196fcdd35f062bece"
pkgdesc="A 10-feet interface made for TVs"
url="https://invent.kde.org/plasma/plasma-bigscreen/"
# armhf blocked by qt5-qtdeclarative
arch="all !armhf"
license="LGPL-2.1-only OR LGPL-3.0-only OR LicenseRef-KDE-Accepted-LGPL"
depends="
	kde-cli-tools
	kdeconnect
	kirigami
	plasma-nano
	plasma-nm
	plasma-pa
	plasma-remotecontrollers
	plasma-settings
	plasma-workspace
	"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kdeclarative-dev
	ki18n-dev
	kio-dev
	kirigami-dev
	knotifications-dev
	kwayland-dev
	kwindowsystem-dev
	libplasma-dev
	plasma-activities-dev
	plasma-activities-stats-dev
	plasma-workspace-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtmultimedia-dev
	samurai
	"
subpackages="$pkgname-lang"
case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/plasma-bigscreen.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-06-03/plasma-bigscreen-$_commit.tar.xz"

options="!check"
builddir="$srcdir/plasma-bigscreen-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
3f119c9c9e7cea1c634027513560b1cd2886c6b07093cc82af1dfe8c1c7f641dcab3cc53deac18b31b278340aed12b196a6cc24b5eec04ef39f4d81f308d191c  plasma-bigscreen-759049cd2124f361f1b633d196fcdd35f062bece.tar.xz
"
