# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=plasma-bigscreen
pkgver=9999_git20241030
pkgrel=0
_commit="edeeb7b7ed07c520ba2a8c16fadb9ef860db5761"
pkgdesc="A 10-feet interface made for TVs"
url="https://invent.kde.org/plasma/plasma-bigscreen/"
# armhf blocked by qt5-qtdeclarative
arch="all !armhf"
license="LGPL-2.1-only OR LGPL-3.0-only OR LicenseRef-KDE-Accepted-LGPL"
depends="
	kde-cli-tools
	kdeconnect
	kirigami
	plasma-nano
	plasma-nm
	plasma-pa
	plasma-remotecontrollers
	plasma-settings
	plasma-workspace
	"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kdeclarative-dev
	ki18n-dev
	kio-dev
	kirigami-dev
	knotifications-dev
	kwayland-dev
	kwindowsystem-dev
	libplasma-dev
	plasma-activities-dev
	plasma-activities-stats-dev
	plasma-workspace-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtmultimedia-dev
	samurai
	"
subpackages="$pkgname-lang"
case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/plasma-bigscreen.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-10-30/plasma-bigscreen-$_commit.tar.xz"

options="!check"
builddir="$srcdir/plasma-bigscreen-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
f0fed8f72ac113a0e9b0dd34f96b48382242b626a4b617cffc1121bffd84105da0b58ef9fcff087188e1b37f93f60fb73ca0777d9ba5ec96479157a3ada89ad6  plasma-bigscreen-edeeb7b7ed07c520ba2a8c16fadb9ef860db5761.tar.xz
"
