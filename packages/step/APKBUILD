# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=step
pkgver=99999_git20250226
pkgrel=0
_commit="c85143f26458aff1fe8fe20686f6f08b4a0ef7bd"
# armhf blocked by extra-cmake-modules
# s390x blocked by 
# riscv64 disabled due to missing rust in recursive dependency
arch="all !armhf !s390x !riscv64"
url="https://edu.kde.org/step/"
pkgdesc="Interactive Physics Simulator"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	eigen-dev
	extra-cmake-modules
	kconfig-dev
	kcrash-dev
	kdoctools-dev

	kiconthemes-dev
	knewstuff-dev
	kplotting-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	qt6-qttools-dev
	samurai
	shared-mime-info
	"
_repo_url="https://invent.kde.org/education/step.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-02-26/step-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/step-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
f9c2845f783921f957a40b0ecc8b707f096501aa52fb3cc3e7ef828e1921e0466f138c56ebd29a7954407483e24cb422b62db1688594500f071bda783de10559  step-c85143f26458aff1fe8fe20686f6f08b4a0ef7bd.tar.xz
"
