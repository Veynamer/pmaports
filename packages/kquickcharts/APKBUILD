# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kquickcharts
pkgver=99999_git20250610
pkgrel=0
_commit="fed717c4c52fc4b06b027130b39e9fc9d61a2760"
pkgdesc="A QtQuick plugin providing high-performance charts"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only OR LGPL-3.0-only"
depends_dev="
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/kquickcharts.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-06-11/kquickcharts-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/kquickcharts-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

dev() {
	# Workaround for a pmbootstrap bug
	# Normally you'd just add $pkgname=$pkgver-r$pkgrel to depends_dev directly
	# However pmbootstrap then tries to install that package but fails to do so
	# if the package hasn't been built before (and thus has nothing to install)
	# It seems =$pkgver-r$pkgrel is ignored by this
	depends="$depends_dev $pkgname=$pkgver-r$pkgrel"
	default_dev
}

sha512sums="
195e0d98daa0fcbe7e48b4836d2038e8a4f26971970e78db16a82310511ec46652e2127bdec8a3de93ce5462fa3c21dfb4cc1a826d564c639018edf636501320  kquickcharts-fed717c4c52fc4b06b027130b39e9fc9d61a2760.tar.xz
"
