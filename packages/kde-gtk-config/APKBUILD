# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=kde-gtk-config
pkgver=99999_git20250204
pkgrel=0
_commit="166e3816c092ea820f335edaa6644e3df90e0a61"
pkgdesc="GTK2 and GTK3 Configurator for KDE"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/plasma/kde-gtk-config"
license="GPL-2.0 AND LGPL-2.1-only OR LGPL-3.0-only"
depends="
	gsettings-desktop-schemas
	xdg-desktop-portal-gtk
	xsettingsd
	"
makedepends="
	extra-cmake-modules
	gsettings-desktop-schemas-dev
	gtk+2.0-dev
	gtk+3.0-dev
	karchive-dev
	kcmutils-dev
	kconfigwidgets-dev
	kdecoration-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	knewstuff-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	samurai
	sassc
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/kde-gtk-config.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-02-12/kde-gtk-config-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kde-gtk-config-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
b50da246bbbe614c43827f248acc0d55ad8abbd6ea3350a56db30c3adfd94ee654316817986f6b680c2ee1f7473f611b577bb344af21bc54818484bb69559ef3  kde-gtk-config-166e3816c092ea820f335edaa6644e3df90e0a61.tar.xz
"
