# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=qrca
pkgver=9999_git20241116
pkgrel=0
_commit="038a5f12a49510156cf441eafeb6128f1f674573"
pkgdesc="QR-Code scanner for Plasma Mobile"
# armhf blocked by qt5-qtdeclarative
# ppc64le, s390x, riscv64 and loongarch64 blocked by qt5-qtwebengine -> purpose
arch="all !armhf !ppc64le !s390x !riscv64 !loongarch64"
url="https://invent.kde.org/utilities/qrca"
license="GPL-3.0-or-later"
depends="
	kirigami
	purpose
	"
makedepends="
	extra-cmake-modules
	kcontacts-dev
	kcoreaddons-dev
	ki18n-dev
	kirigami-dev
	prison-dev
	purpose-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtmultimedia-dev
	qt6-qtsvg-dev
	samurai
	zxing-cpp-dev
	"
checkdepends="appstream"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/utilities/qrca.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-11-22/qrca-$_commit.tar.xz"
builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
1111ddb040f50ee6f23cda2b5bc9df5bfebe159d2e6d95f1f2d92e7d84cb0492a9452ac44f894defca44d574a0d9cf1f9ea25507b64c10553b773dc30a29f02a  qrca-038a5f12a49510156cf441eafeb6128f1f674573.tar.xz
"
