# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=qrca
pkgver=9999_git20241207
pkgrel=0
_commit="da129ccadc519317051cfbf98acd02b1befa42a6"
pkgdesc="QR-Code scanner for Plasma Mobile"
# armhf blocked by qt5-qtdeclarative
# ppc64le, s390x, riscv64 and loongarch64 blocked by qt5-qtwebengine -> purpose
arch="all !armhf !ppc64le !s390x !riscv64 !loongarch64"
url="https://invent.kde.org/utilities/qrca"
license="GPL-3.0-or-later"
depends="
	kirigami
	purpose
	"
makedepends="
	extra-cmake-modules
	kcontacts-dev
	kcoreaddons-dev
	ki18n-dev
	kirigami-dev
	prison-dev
	purpose-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtmultimedia-dev
	qt6-qtsvg-dev
	samurai
	zxing-cpp-dev
	"
checkdepends="appstream"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/utilities/qrca.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-12-07/qrca-$_commit.tar.xz"
builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
fd3938e6c58db9ab205e244bbcc493cfe0452c8229954b4b84a8ebc60e0877fe4668889280fd05cb16908d92053d99c261074b6ce97ac83d5eacdffcadf63df9  qrca-da129ccadc519317051cfbf98acd02b1befa42a6.tar.xz
"
