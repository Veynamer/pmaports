# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=qrca
pkgver=9999_git20241029
pkgrel=0
_commit="6dbf0a412ac5cde0fc8521d4061161e1fe63b46a"
pkgdesc="QR-Code scanner for Plasma Mobile"
# armhf blocked by qt5-qtdeclarative
# ppc64le, s390x, riscv64 and loongarch64 blocked by qt5-qtwebengine -> purpose
arch="all !armhf !ppc64le !s390x !riscv64 !loongarch64"
url="https://invent.kde.org/utilities/qrca"
license="GPL-3.0-or-later"
depends="
	kirigami
	purpose
	"
makedepends="
	extra-cmake-modules
	kcontacts-dev
	kcoreaddons-dev
	ki18n-dev
	kirigami-dev
	prison-dev
	purpose-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtmultimedia-dev
	qt6-qtsvg-dev
	samurai
	zxing-cpp-dev
	"
checkdepends="appstream"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/utilities/qrca.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-11-01/qrca-$_commit.tar.xz"
builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
5f6905d744a60c3e3931247deeaee5cbf4dcab8a783644fff739b03e9372801d43e434e7cfbf3b327312ab8f928dcb516a11b8d71bd00d8e1257ccbd1f5b22e7  qrca-6dbf0a412ac5cde0fc8521d4061161e1fe63b46a.tar.xz
"
