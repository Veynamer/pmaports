# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kholidays
pkgver=99999_git20250323
pkgrel=0
_commit="7bdf1f6e5af7ad82324721ba544e95bda24ed3d4"
pkgdesc="Support for icon themes"
arch="all !armhf" # armhf blocked by qt6-qtdeclarative
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later"
depends_dev="
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kholidays.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-03-24/kholidays-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kholidays-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
9b025edd41d3b454ec827acb4414ba8aa18f43ff827afe359d298f71dc9c2f2457358cc14591f79e388aa8b36cfe4805db75b81adb721b319ca297934e99d394  kholidays-7bdf1f6e5af7ad82324721ba544e95bda24ed3d4.tar.xz
"
