# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kholidays
pkgver=99999_git20250207
pkgrel=0
_commit="ed17745a6c18113a8dd65e636ea1e617ab098273"
pkgdesc="Support for icon themes"
arch="all !armhf" # armhf blocked by qt6-qtdeclarative
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later"
depends_dev="
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kholidays.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-02-22/kholidays-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kholidays-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
bb7dca1c908659f2c8aa08d4425a5ec9effafa819d7ec8ae5c443e55a4c577ff833f36e34b039e0dd09940881232cc571bcb679437051d5cf5e9330f12b71eec  kholidays-ed17745a6c18113a8dd65e636ea1e617ab098273.tar.xz
"
