# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kholidays
pkgver=99999_git20250324
pkgrel=0
_commit="c7dcc0e2c52f6df1d9843f87fd72c3c577edc991"
pkgdesc="Support for icon themes"
arch="all !armhf" # armhf blocked by qt6-qtdeclarative
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later"
depends_dev="
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kholidays.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-03-25/kholidays-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kholidays-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
42d19a610202bd709db01a3711569f7ce5c118bc161125464dfb621330ca343e0141b707ee0b82635150c919cd0ec98952a6a5bcac33566c4f77a1477b5f6667  kholidays-c7dcc0e2c52f6df1d9843f87fd72c3c577edc991.tar.xz
"
