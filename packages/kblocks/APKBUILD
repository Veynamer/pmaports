# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kblocks
pkgver=99999_git20250227
pkgrel=0
_commit="46d4478789a23fadbb0011c9b14ff674dacd02d8"
pkgdesc="The classic falling blocks game"
url="https://kde.org/applications/games/kblocks/"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kdoctools-dev
	ki18n-dev
	kwidgetsaddons-dev
	kxmlgui-dev
	libkdegames-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/games/kblocks.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-03-03/kblocks-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kblocks-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
7943127dee280cf110caa7926cf72b72884e68fd83ae96ec9ce8a01206553f3fda477b4eeb52498b811c85261b3bedf988c32177889cc325d6e6c6c12e656573  kblocks-46d4478789a23fadbb0011c9b14ff674dacd02d8.tar.xz
"
