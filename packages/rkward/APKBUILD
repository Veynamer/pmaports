# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=rkward
pkgver=99999_git20250305
pkgrel=0
_commit="e4f1ea4c1e6a054564cb99ec8bb27f7f73ed287b"
# armhf blocked by extra-cmake-modules
# s390x, ppc64le, riscv64 and loongarch64 blocked by qt5-qtwebengine
arch="all !armhf !s390x !ppc64le !riscv64 !loongarch64"
url="https://rkward.kde.org/"
pkgdesc="Easy extensible and easy-to-use IDE/GUI for R"
license="GPL-2.0-or-later"
depends="R"
makedepends="
	R-dev
	extra-cmake-modules
	kconfig-dev
	kcoreaddons-dev
	kdoctools-dev
	ki18n-dev
	knotifications-dev
	kparts-dev
	ktexteditor-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	kxmlgui-dev
	qt6-qtbase-dev
	qt6-qtwebengine-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/education/rkward.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-03-06/rkward-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
8873a5c4a328cf862838628f22eb19063f86e9d41f943eeefac2642a7cd352c3eeda1b1abea5ee420d54ee85ef3fc17b8a5ac8ab725d8e76bff2d37af32bf3a1  rkward-e4f1ea4c1e6a054564cb99ec8bb27f7f73ed287b.tar.xz
"
