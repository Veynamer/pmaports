# Maintainer: team/kde <bribbers@disroot.org>
# Contributor: Bart Ribbers <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=plasma-activities-stats
pkgver=99999_git20250203
pkgrel=0
_commit="64a1da29f2621fcf4e5ec4f31a0c2c5ca3c6b24f"
arch="all !armhf" # armhf blocked by qt6-qtdeclarative
pkgdesc="A library for accessing the usage data collected by the activities system"
url="https://invent.kde.org/plasma/plasma-activities-stats"
license="LGPL-2.1-only OR LGPL-3.0-only"
depends_dev="
	boost-dev
	graphviz-dev
	kconfig-dev
	plasma-activities-dev
	qt6-qtdeclarative-dev
	qt6-qttools-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/plasma/plasma-activities-stats.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-02-04/plasma-activities-stats-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"

options="!check"
builddir="$srcdir/plasma-activities-stats-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
e72733fe0ea604c3a0b87825f2c9486d073137f9945faf6d9308339d5b2085248843ce6acabc8d842f142cd94b285864a771e1aa2dcd2d12e2baf361f85ae447  plasma-activities-stats-64a1da29f2621fcf4e5ec4f31a0c2c5ca3c6b24f.tar.xz
"
