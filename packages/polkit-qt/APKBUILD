# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=polkit-qt
pkgver=99999_git20250116
pkgrel=0
_commit="7f7ebc0a461228b80b6015b675d55ee2ef2a9109"
pkgdesc="Qt wrapper around polkit-1 client libraries"
arch="all"
url="https://www.kde.org"
license="LGPL-2.1-only"
depends_dev="polkit-elogind-dev"
makedepends="$depends_dev
	cmake
	qt5-qtbase-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/libraries/polkit-qt-1.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-01-17/polkit-qt-1-$_commit.tar.xz"
subpackages="$pkgname-dev ${pkgname}5:_qt5 ${pkgname}6:_qt6"

replaces="polkit-qt-1<=0.114.0-r2"

options="!check"
builddir="$srcdir/polkit-qt-1-$_commit"

build() {
	cmake -B build-qt5 -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build-qt5

	cmake -B build-qt6 -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DQT_MAJOR_VERSION=6
	cmake --build build-qt6
}

check() {
	ctest --test-dir build-qt5 --output-on-failure
	ctest --test-dir build-qt6 --output-on-failure

}

package() {
	DESTDIR="$pkgdir" cmake --install build-qt5
	DESTDIR="$pkgdir" cmake --install build-qt6
}

_qt5() {
	amove usr/lib/libpolkit-qt5*
}

_qt6() {
	amove usr/lib/libpolkit-qt6*
}

sha512sums="
3a690941595f18a297aa83f6c1af95e224a7890ddeb877841f63867cb652f107d10664fd006d3993aa5c004412b9bf52f28788383e79726bdf5e068c99687e3b  polkit-qt-1-7f7ebc0a461228b80b6015b675d55ee2ef2a9109.tar.xz
"
