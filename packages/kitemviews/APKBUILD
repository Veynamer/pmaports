# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kitemviews
pkgver=99999_git20250226
pkgrel=0
_commit="3210e3ddf3a4c3dfe2f397ad0764727ab9f2a4d8"
pkgdesc="Widget addons for Qt Model/View"
arch="all !armhf" # armhf blocked by extra-cmake-modules
url="https://community.kde.org/Frameworks"
license="GPL-2.0-only AND LGPL-2.1-only"
depends_dev="qt6-qtbase-dev"
makedepends="
	doxygen
	extra-cmake-modules
	graphviz
	qt6-qttools-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/kitemviews.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-02-26/kitemviews-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kitemviews-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
d8ef13feeab7c37b2fd3f113ff74fcc4c2e1bfcfb0e9e36c422a14282b707a974c79bb6d1b856b7048577622c43216d4694954e5a3d9329d7442eb7dfa429c22  kitemviews-3210e3ddf3a4c3dfe2f397ad0764727ab9f2a4d8.tar.xz
"
