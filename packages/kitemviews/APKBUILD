# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kitemviews
pkgver=99999_git20250519
pkgrel=0
_commit="81996a31588c63ea852c6fd1313a696d9105eb21"
pkgdesc="Widget addons for Qt Model/View"
arch="all"
url="https://community.kde.org/Frameworks"
license="GPL-2.0-only AND LGPL-2.1-only"
depends_dev="qt6-qtbase-dev"
makedepends="
	doxygen
	extra-cmake-modules
	graphviz
	kde-qdoc-common
	qt6-qttools-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/kitemviews.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-05-22/kitemviews-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kitemviews-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	cmake --build build --target prepare_docs
	cmake --build build --target generate_docs
	cmake --build build --target generate_qch
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
282329c97301834760c0efc37a7b68dd68d3d82985a26c862333131d63cef80257ccde5f393d660a06e788a9170326fe486c2c76af60d530634c6192792662d3  kitemviews-81996a31588c63ea852c6fd1313a696d9105eb21.tar.xz
"
