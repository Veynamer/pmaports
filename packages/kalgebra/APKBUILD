# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kalgebra
pkgver=99999_git20250115
pkgrel=0
_commit="3df3e2a08f815fb51d0f9ec7bb3b6efa5c94a4b7"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://edu.kde.org/kalgebra/"
pkgdesc="2D and 3D Graph Calculator"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	analitza-dev
	extra-cmake-modules
	kconfigwidgets-dev
	kcoreaddons-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	kwidgetsaddons-dev
	libplasma-dev
	ncurses-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	readline-dev
	samurai
	"
_repo_url="https://invent.kde.org/education/kalgebra.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-01-15/kalgebra-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kalgebra-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
fd386e21de60614b4653bcfb70ce0af74f9d853266436e6d5f2b93d67a59b7d60292b0ca38492c3ec9ab98404b1e92c6ba4717c2d4095addd2bb09196a1a93b1  kalgebra-3df3e2a08f815fb51d0f9ec7bb3b6efa5c94a4b7.tar.xz
"
