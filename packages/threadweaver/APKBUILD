# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=threadweaver
pkgver=99999_git20250219
pkgrel=0
_commit="f3e1801852a9fa27db7775131e5c00882d5d32a1"
pkgdesc="High-level multithreading framework"
arch="all !armhf" # armhf blocked by qt6-qtdeclarative
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only"
depends_dev="
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/threadweaver.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-02-23/threadweaver-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"

options="!check"
builddir="$srcdir/threadweaver-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
b1708836fce7dceff1b6ce53b2e2eb0036a1ddbde0e6531085bb3c5d90d125e386e8756fb7ef92baf60271db2ebb9e2e738a368501edf7e682580855cc1a1f38  threadweaver-f3e1801852a9fa27db7775131e5c00882d5d32a1.tar.xz
"
