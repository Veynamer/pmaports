# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=qqc2-desktop-style
pkgver=9999_git20241012
pkgrel=0
_commit="5537d04c6cb96e70df2ccd357ea84878135fc8b2"
pkgdesc="A style for Qt Quick Controls 2 to make it follow your desktop theme"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-3.0-only AND (GPL-2.0-only OR GPL-3.0-only)"
depends_dev="
	kconfigwidgets-dev
	kiconthemes-dev
	kirigami-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/qqc2-desktop-style.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-10-30/qqc2-desktop-style-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/qqc2-desktop-style-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
5d1041f0cd07c7a1377002fc847ca50de352c19d8e0b20d698692f153cee2c4d776c566a0f7cc674fd67fcceac27bf092ee8cd4c43989d7aee981bb7e27edaf4  qqc2-desktop-style-5537d04c6cb96e70df2ccd357ea84878135fc8b2.tar.xz
"
