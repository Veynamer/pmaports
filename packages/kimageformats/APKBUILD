# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kimageformats
pkgver=9999_git20250102
pkgrel=0
_commit="43f3fd05f708a8f779ff28daf17e0bf4434508d9"
pkgdesc="Image format plugins for Qt"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later"
makedepends="
	extra-cmake-modules
	karchive-dev
	libavif-dev
	libheif-dev
	libraw-dev
	openexr-dev
	qt6-qtbase-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/kimageformats.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-01-03/kimageformats-$_commit.tar.xz"

case "$CARCH" in
s390x)
	;;
*)
	makedepends="$makedepends libjxl-dev"
	;;
esac

options="!check"
builddir="$srcdir/kimageformats-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DKIMAGEFORMATS_HEIF=ON
	cmake --build build
}

check() {
	case "$CARCH" in
		armv7) xvfb-run ctest --test-dir build --output-on-failure -E "kimageformats-read-(psd|jxl|xcf)" ;;
		s390x) xvfb-run ctest --test-dir build --output-on-failure -E "kimageformats-(read-psd|write-avif)" ;;
		*) xvfb-run ctest --test-dir build --output-on-failure -E "kimageformats-read-psd" ;;
	esac
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
eb0d3f7634b49c5cda46fec5fb2f9e86f6aaf31740de6ee2c16afffb5c493dee865b7e9c517216c221b2f9509c5511fcc9b3e056e4b1a0c18d07b23fbe49993f  kimageformats-43f3fd05f708a8f779ff28daf17e0bf4434508d9.tar.xz
"
