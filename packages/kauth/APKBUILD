# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kauth
pkgver=99999_git20250126
pkgrel=0
_commit="3a09274e1ea10538cf029fc3d6e41877b6a17342"
pkgdesc="Abstraction to system policy and authentication features"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later"
depends_dev="
	kcoreaddons-dev
	kwindowsystem-dev
	polkit-qt-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kauth.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-02-05/kauth-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kauth-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	# KAuthHelperTest hangs
	ctest --test-dir build --output-on-failure -E '(KAuthHelperTest)'
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
3167bc541650514258d3279f863471474f959e67d466d84b2954c8a74c1d87f432c4e33537847f3ba93d35e1d3a9daee664449e0d92bf159daead75b8451abcc  kauth-3a09274e1ea10538cf029fc3d6e41877b6a17342.tar.xz
"
