# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kauth
pkgver=99999_git20250512
pkgrel=0
_commit="9a8dedca9ec92e7a3f106166d1c9b06f3c507067"
pkgdesc="Abstraction to system policy and authentication features"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later"
depends_dev="
	kcoreaddons-dev
	kwindowsystem-dev
	polkit-qt-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	kde-qdoc-common
	qt6-qttools
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kauth.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-05-13/kauth-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kauth-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	cmake --build build --target prepare_docs
	cmake --build build --target generate_docs
	cmake --build build --target generate_qch
}

check() {
	# KAuthHelperTest hangs
	ctest --test-dir build -E '(KAuthHelperTest)'
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
d80da3239662459301717a81826a4cc8dc946dea8b0355ab677b646a2e92e18652aed612af9cfa573f1cbfb1a7975aa7f300a968c1a4bce1e3ea2b4856a7caaa  kauth-9a8dedca9ec92e7a3f106166d1c9b06f3c507067.tar.xz
"
