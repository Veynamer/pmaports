# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kauth
pkgver=99999_git20250528
pkgrel=0
_commit="094ce7ff6cf304710c7e582586a53fe2f40a7b9d"
pkgdesc="Abstraction to system policy and authentication features"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later"
depends_dev="
	kcoreaddons-dev
	kwindowsystem-dev
	polkit-qt-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	kde-qdoc-common
	qt6-qttools
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kauth.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-06-03/kauth-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kauth-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	cmake --build build --target prepare_docs
	cmake --build build --target generate_docs
	cmake --build build --target generate_qch
}

check() {
	# KAuthHelperTest hangs
	ctest --test-dir build -E '(KAuthHelperTest)'
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
fb0f7a7d97d928c6de5c3c34928b46e9529723e34cb2e0d7b3a261076aaaa33d411d89ad25389dd52f4615888f9e6b0df10e9395b1d86318736a4387aebb55a2  kauth-094ce7ff6cf304710c7e582586a53fe2f40a7b9d.tar.xz
"
