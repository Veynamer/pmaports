# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=ktrip
pkgver=9999_git20241225
pkgrel=0
_commit="a5e990faddcf98ac064a471803aa299ba8cf6ebc"
pkgdesc="A public transport assistant"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/utilities/ktrip"
license="GPL-2.0-only OR GPL-3.0-only"
depends="
	kde-icons
	kirigami-addons
	kirigami
	"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kcontacts-dev
	kcrash-dev
	ki18n-dev
	kirigami-addons-dev
	kitemmodels-dev
	kpublictransport-dev
	qqc2-desktop-style-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	"
_repo_url="https://invent.kde.org/utilities/ktrip.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-12-30/ktrip-$_commit.tar.xz"
options="!check" # No tests

options="!check"
builddir="$srcdir/ktrip-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DKF_IGNORE_PLATFORM_CHECK=ON
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

