# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=marknote
pkgver=99999_git20250115
pkgrel=0
_commit="9d73a15005864b49e6cf327167a6b8ff436acc2e"
pkgdesc="A simple markdown note management app"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://apps.kde.org/marknote/"
license="GPL-3.0-or-later AND CC0-1.0"
depends="
	kirigami
	kirigami-addons
	kitemmodels
	qqc2-desktop-style
	"
makedepends="
	extra-cmake-modules
	kcolorscheme-dev
	kconfig-dev
	kcoreaddons-dev
	ki18n-dev
	kirigami-addons-dev
	kirigami-dev
	kmime-dev
	kxmlgui-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtsvg-dev
	samurai
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/office/marknote.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-01-15/marknote-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
81f3d1d0e1fa57a7780f2667943ed9b58d7f66e24943ded2f487e1f7604d4da7d3fad9bb174f93b98593b87ecbc6800164a1cbcfea6d1f2969707dd21e54e8bf  marknote-9d73a15005864b49e6cf327167a6b8ff436acc2e.tar.xz
"
