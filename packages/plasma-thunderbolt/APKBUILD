# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=plasma-thunderbolt
pkgver=99999_git20250302
pkgrel=0
_commit="7c7ea64496763afdd158fde62b3aa83995ec7126"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
pkgdesc="Plasma integration for controlling Thunderbolt devices"
license="GPL-2.0-only OR GPL-3.0-only"
depends="bolt"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kdeclarative-dev
	ki18n-dev
	knotifications-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	samurai
	"
checkdepends="xvfb-run"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/plasma-thunderbolt.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-03-24/plasma-thunderbolt-$_commit.tar.xz"
subpackages="$pkgname-lang"
options="!check" # Requires running dbus server

options="!check"
builddir="$srcdir/plasma-thunderbolt-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
5186a11417d225b0a94a2e535a755f25c2e7b6246b72ca5ca19e6f36fbd6f8e2dcac0cf7671ac46c41716849230b79440fcc20a682722a2d090b47ccf383d331  plasma-thunderbolt-7c7ea64496763afdd158fde62b3aa83995ec7126.tar.xz
"
