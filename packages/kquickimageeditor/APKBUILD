# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kquickimageeditor
pkgver=99999_git20250219
pkgrel=0
_commit="ab48777f1092bae59be5976728b6ced3f54edcf7"
pkgdesc="Simple image editor for QtQuick applications"
url="https://invent.kde.org/libraries/kquickimageeditor"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
license="BSD-2-Clause AND LGPL-2.1-or-later"
depends_dev="
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	samurai
	"
_repo_url="https://invent.kde.org/libraries/kquickimageeditor.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-02-22/kquickimageeditor-$_commit.tar.xz"
subpackages="$pkgname-dev"
options="!check" # No tests

builddir="$srcdir/kquickimageeditor-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
