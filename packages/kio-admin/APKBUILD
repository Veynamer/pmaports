# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kio-admin
pkgver=9999_git20241104
pkgrel=0
_commit="ed9a06b91170cd2eb8aa5a7fc1d6b4ead6bc7c61"
pkgdesc="Manage files as administrator using the admin:// KIO protocol"
url="https://invent.kde.org/system/kio-admin"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
license="BSD-3-Clause AND (GPL-2.0-only OR GPL-3.0-only)"
# zstd is purely used to unpack the source archive
makedepends="
	extra-cmake-modules
	ki18n-dev
	kio-dev
	polkit-qt-dev
	qt6-qtbase-dev
	samurai
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/system/kio-admin.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-11-08/kio-admin-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kio-admin-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
e373908966419b6ce176ce228360366344f107ccd08b9385661b2f12455fd37f1fe076e3d31a497c56ba3c037ceee3d085ea8f6e9cb820b083a1909d2edc50a0  kio-admin-ed9a06b91170cd2eb8aa5a7fc1d6b4ead6bc7c61.tar.xz
"
