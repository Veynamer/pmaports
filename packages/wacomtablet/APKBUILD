# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=wacomtablet
pkgver=9999_git20241202
pkgrel=0
_commit="8b6cd542a49abd1547563b5e8cc45252d05da101"
pkgdesc="GUI for Wacom Linux drivers that supports different button/pen layout profiles"
# armhf blocked by qt5-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
depends="xinput"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kdoctools-dev
	kglobalaccel-dev
	ki18n-dev
	knotifications-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	kxmlgui-dev
	libplasma-dev
	libwacom-dev
	plasma5support-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	samurai
	xf86-input-wacom-dev
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/system/wacomtablet.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-12-04/wacomtablet-$_commit.tar.xz"
subpackages="$pkgname-lang $pkgname-doc"

options="!check"
builddir="$srcdir/wacomtablet-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build --output-on-failure -E "Test.KDED.DBusTabletService"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
ad9019113110f6b20174ea7f4281e6556768a0ea774de314d7f95229bc1b3e10ef3e5196c8aac8251ea7bd2afb780dc73078eb78801b2229c3e0ea7fd315efc3  wacomtablet-8b6cd542a49abd1547563b5e8cc45252d05da101.tar.xz
"
