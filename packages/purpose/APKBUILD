# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=purpose
pkgver=99999_git20250204
pkgrel=0
_commit="18ba6b1eb9b371a38310accc20b31e6055fb8446"
pkgdesc="Framework for providing abstractions to get the developer's purposes fulfilled"
# armhf blocked by qt6-qtdeclarative
# ppc64le, s390x and riscv64 blocked by qt6-qtwebengine -> kaccounts-integration
arch="all !armhf !ppc64le !s390x !riscv64"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later"
depends_dev="
	kconfig-dev
	kcoreaddons-dev
	ki18n-dev
	kio-dev
	kirigami-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/purpose.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-02-05/purpose-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"
options="!check" # fails on builders

replaces="purpose5"

options="!check"
builddir="$srcdir/purpose-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=ON
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build --output-on-failure -E 'menutest'
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
f22e27ddfb9ed9b4dfc4c62a73343aa266c053b2f3e7142ba3fb03ea6cab669df7b75ae6942c31c9e522ae2b6517318d18b328117a651d724dea3c474dad1f8b  purpose-18ba6b1eb9b371a38310accc20b31e6055fb8446.tar.xz
"
