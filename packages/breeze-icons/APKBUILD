# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=breeze-icons
pkgver=99999_git20250218
pkgrel=0
_commit="fd10add3ea02483929981924b277b9f71ba10902"
pkgdesc="Breeze icon themes"
arch="all !armhf" # armhf blocked by extra-cmake-modules
url="https://community.kde.org/Frameworks"
license="LGPL-3.0-or-later"
makedepends="
	extra-cmake-modules
	py3-lxml
	python3
	qt6-qtbase-dev
	samurai
	"
checkdepends="bash"
subpackages="$pkgname-dev"
_repo_url="https://invent.kde.org/frameworks/breeze-icons.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-02-22/breeze-icons-$_commit.tar.xz"

# Several KDE applications use icons not yet present in most themes
# We want to keep the possibility for users to not use the KDE provided
# breeze-icons theme however, as hopefully in the future this situation changes
# Thus let any theme that provides these icons provide "kde-icons" so the user
# retains their ability to choose their preferred theme
provides="kde-icons"
provider_priority=100

replaces="breeze-icons5"

options="!check"
builddir="$srcdir/breeze-icons-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBINARY_ICONS_RESOURCE=ON
	cmake --build build
}

check() {
	ctest --test-dir build -E '(dupe|symlink)'
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
50d57a6937f40dfb3283f2a85b4595ea6027a1cd632c5b6eaea9b62c2c545b82d7d40fcbb0573fe912e7ab95c8ad11ec02dbfba5b32f7c9566b8e31ef8e7102d  breeze-icons-fd10add3ea02483929981924b277b9f71ba10902.tar.xz
"
