# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=plasma5support
pkgver=99999_git20250212
pkgrel=0
_commit="93389b8abf9bdfe52f8210a8f248f67ebe2a719a"
pkgdesc="Support components for porting from KF5/Qt5 to KF6/Qt6"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	doxygen
	kconfig-dev
	kcoreaddons-dev
	ki18n-dev
	kidletime-dev
	kio-dev
	kpackage-dev
	kservice-dev
	kxmlgui-dev
	libksysguard-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qttools-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/plasma5support.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-02-22/plasma5support-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/plasma5support-$_commit"

replaces="plasma-workspace"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=ON \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

lang() {
	replaces="plasma-workspace-lang"
	default_lang
}
sha512sums="
c303be1378f3d5bbfc78a1db8a43d06535ad678dd02528274450ba363df0039c5ec05ddb284e4923de342cb611329f5dc3d447e45c8ce0819f748e8c06953c80  plasma5support-93389b8abf9bdfe52f8210a8f248f67ebe2a719a.tar.xz
"
