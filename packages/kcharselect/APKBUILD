# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kcharselect
pkgver=99999_git20250404
pkgrel=0
_commit="acfbb142ddb0e9f754193c2f39a370f6a4a848ef"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/utilities/org.kde.kcharselect"
pkgdesc="A tool to select special characters from all installed fonts and copy them into the clipboard"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	kbookmarks-dev
	kcrash-dev
	kdoctools-dev
	ki18n-dev
	kwidgetsaddons-dev
	kxmlgui-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/utilities/kcharselect.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-04-07/kcharselect-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kcharselect-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
853a83d1bf9152ab54a6c3c29365d99b0464904caf5cf28ba71d1c8b5e7ebca209342ea7c6010d8d0063868e718e7c4345d1e8ecad1b71f00cd91a91aa6dc038  kcharselect-acfbb142ddb0e9f754193c2f39a370f6a4a848ef.tar.xz
"
