# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kmoretools
pkgver=9999_git20240916
pkgrel=0
_commit="bf1800a38d72a5d15a4b611cda86feea030fe890"
pkgdesc="Support for downloading application assets from the network"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://invent.kde.org/libraries/kmoretools/"
license="BSD-2-Clause AND LGPL-2.1-or-later AND LGPL-3.0-only"
depends_dev="
	kconfig-dev
	kcoreaddons-dev
	ki18n-dev
	kio-dev
	kjobwidgets-dev
	kservice-dev
	kwidgetsaddons-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	samurai
	"
subpackages="$pkgname-dev $pkgname-lang"
_repo_url="https://invent.kde.org/libraries/kmoretools.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-10-24/kmoretools-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kmoretools-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING="$(want_check && echo ON || echo OFF)" \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
f2fd7211230c9c05ebbe824efc48a0dcb4755f5f319ea6de588681be0f50471626cee938cd88ea5b067a5a273616d325bd784bdcd0c222ba0aa20951bdebab7b  kmoretools-bf1800a38d72a5d15a4b611cda86feea030fe890.tar.xz
"
