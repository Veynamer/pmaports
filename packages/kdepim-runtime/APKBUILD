# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kdepim-runtime
pkgver=99999_git20250206
pkgrel=0
_commit="36a8e2bb42ee1c353df36302a3f3273824879dfe"
pkgdesc="Extends the functionality of kdepim"
url="https://kontact.kde.org/"
# armhf blocked by extra-cmake-modules
# ppc64le, s390x and riscv64 blocked by qt6-qtwebengine -> akonadi
arch="all !armhf !ppc64le !s390x !riscv64"
license="LGPL-2.0-or-later"
makedepends="
	akonadi-calendar-dev
	akonadi-contacts-dev
	akonadi-dev
	akonadi-mime-dev
	akonadi-notes-dev
	extra-cmake-modules
	kcalendarcore-dev
	kcalutils-dev
	kcodecs-dev
	kconfig-dev
	kconfigwidgets-dev
	kcontacts-dev
	kdav-dev
	kdoctools-dev
	kholidays-dev
	kidentitymanagement-dev
	kimap-dev
	kio-dev
	kitemmodels-dev
	kmailtransport-dev
	kmbox-dev
	kmime-dev
	knotifications-dev
	knotifyconfig-dev
	ktextwidgets-dev
	kwindowsystem-dev
	libkgapi-dev
	libxslt-dev
	pimcommon-dev
	qca-qt6-dev
	qt6-qtbase-dev
	qt6-qtnetworkauth-dev
	qt6-qtspeech-dev
	samurai
	shared-mime-info
	"
subpackages="$pkgname-dbg $pkgname-lang"
_repo_url="https://invent.kde.org/pim/kdepim-runtime.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-02-06/kdepim-runtime-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kdepim-runtime-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
2ca2a45713115688bdc7a7a84266a9cbc5f38ca88ef4b0d10d6d9e84d3535e995f57d4ea92680ed33ca3e701f2d1eaa4e6477c363d829567bfbcec10d821c038  kdepim-runtime-36a8e2bb42ee1c353df36302a3f3273824879dfe.tar.xz
"
