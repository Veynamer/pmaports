# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=filelight
pkgver=99999_git20250521
pkgrel=0
_commit="45d078cfdb67ddb18617e52b8895f859067e1869"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/utilities/filelight"
pkgdesc="An application to visualize the disk usage on your computer"
license="(GPL-2.0-only OR GPL-3.0-only) AND GFDL-1.2-only"
depends="kquickcharts"
makedepends="
	extra-cmake-modules
	kdeclarative-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	kirigami-addons-dev
	kxmlgui-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/utilities/filelight.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-05-22/filelight-$_commit.tar.xz"
subpackages="$pkgname-dbg $pkgname-doc $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/filelight-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
57bd8eef559c4d82a76d7d94cee894af819e9770e43dc771a45329acb49faf1fa950c2028d22bf9557180e5be6bb03d6d50fea65706c8b8533f397306940f5f5  filelight-45d078cfdb67ddb18617e52b8895f859067e1869.tar.xz
"
