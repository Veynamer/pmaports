# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kcrash
pkgver=99999_git20250606
pkgrel=0
_commit="fca928d47b2eeae2f1e9a15756bbcfacf3914d7a"
pkgdesc="Support for application crash analysis and bug report from apps"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later"
depends_dev="
	kcoreaddons-dev
	kwindowsystem-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	qt6-qttools-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/kcrash.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-06-09/kcrash-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/kcrash-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	# kcrashtest is broken
	xvfb-run ctest --test-dir build -E "kcrashtest"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
ddfd1f41a12f2953d679abb25daf05bb402f713524edb7ead4f8278170b61733d16b184c0ed0b9b01e0a4df5b560421043f91bc9641d18127316b8d538e98ec5  kcrash-fca928d47b2eeae2f1e9a15756bbcfacf3914d7a.tar.xz
"
