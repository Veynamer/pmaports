# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-mobile
pkgname=plasma-settings
pkgver=99999_git20250522
pkgrel=0
_commit="5926ef0551db5f1d7897ec8b6ce79407844d1fa6"
pkgdesc="Settings application for Plasma Mobile"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Plasma/Mobile"
license="GPL-2.0-or-later AND LGPL-2.1-or-later"
depends="
	kded
	kirigami-addons
	kirigami
	openrc-settingsd
	"
makedepends="
	extra-cmake-modules
	kauth-dev
	kcmutils-dev
	kconfig-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kdeclarative-dev
	ki18n-dev
	kio-dev
	kirigami-addons-dev
	kitemmodels-dev
	kwindowsystem-dev
	modemmanager-qt-dev
	networkmanager-qt-dev
	libplasma-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	samurai
	solid-dev
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/plasma-mobile/plasma-settings.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-05-22/plasma-settings-$_commit.tar.xz"
options="!check" # No tests

options="!check"
builddir="$srcdir/plasma-settings-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
