	"
builddir="$srcdir/firmware-oneplus-kebab-$_commit"

package() {
	mkdir -p "$pkgdir"
	install -Dm644 $builddir/*.mbn -t $pkgdir/lib/firmware/qcom/sm8250/OnePlus

}

