# Reference: <https://postmarketos.org/devicepkg>
pkgname=device-oneplus-kebab
pkgdesc="OnePlus 8T"
pkgver=9999
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="aarch64"
options="!check !archcheck"
depends="
	mkbootimg
	postmarketos-base
	firmware-oneplus-kebab
"
makedepends="
	devicepkg-dev
	dtc
	"
subpackages="
	$pkgname-kernel-devel:kernel_devel
	$pkgname-kernel-mainline:kernel_mainline
"
source="
	deviceinfo
	modules-initfs
	sm8250-oneplus-kebab-empty.dts
"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname

	dtc -O dtb -o "$srcdir/dtbo.img" -I dts "$srcdir/sm8250-oneplus-kebab-empty.dts"
	install -Dm644 "$srcdir/dtbo.img" "$pkgdir/boot/dtbo.img"
}

kernel_devel() {
	depends="linux-postmarketos-external u-boot-qcom-debug-sm8250-oneplus-kebab"
	devicepkg_subpackage_kernel $startdir $pkgname $subpkgname
}

kernel_mainline() {
	depends="linux-postmarketos-qcom-sm8250 u-boot-qcom-sm8250-oneplus-kebab"
	devicepkg_subpackage_kernel $startdir $pkgname $subpkgname
}

