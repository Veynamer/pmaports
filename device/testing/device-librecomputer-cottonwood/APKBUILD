# Reference: <https://postmarketos.org/devicepkg>
# Maintainer: Newbyte <newbyte@postmarketos.org>
# Co-Maintainer: Ferass El Hafidi <funderscore@postmarketos.org>
pkgname=device-librecomputer-cottonwood
pkgdesc="Libre Computer Cottonwood"
pkgver=1
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="aarch64"
options="!check !archcheck"
depends="
	postmarketos-base
	soc-amlogic-s905
"
makedepends="devicepkg-dev"
source="
	deviceinfo
	modules-initfs
"
subpackages="
	$pkgname-nonfree-firmware:nonfree_firmware
	$pkgname-kernel-alta:kernel_alta
	$pkgname-kernel-solitude:kernel_solitude
"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
}

kernel_alta() {
	pkgdesc="Kernel for Libre Computer AML-A311D-CC"
	depends="linux-postmarketos-amlogic"
	devicepkg_subpackage_kernel $startdir $pkgname $subpkgname
}

kernel_solitude() {
	pkgdesc="Kernel for Libre Computer AML-S905D3-CC"
	depends="linux-postmarketos-amlogic"
	provides="device-librecomputer-solitude>=$pkgver-r$pkgrel"
	provider_priority=100
	devicepkg_subpackage_kernel $startdir $pkgname $subpkgname
}

nonfree_firmware() {
	pkgdesc="vdec firmware"
	depends="linux-firmware-meson"
	provides="device-librecomputer-solitude-nonfree-firmware>=$pkgver-r$pkgrel"
	provider_priority=100
	mkdir "$subpkgdir"
}

sha512sums="
