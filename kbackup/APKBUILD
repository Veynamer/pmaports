# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kbackup
pkgver=9999_git20241010
pkgrel=0
_commit="56afb231e5aa763050d4cacef14bdfb2bf7e8b2e"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/utilities/org.kde.kbackup"
pkgdesc="An application which lets you back up your data in a simple, user friendly way"
license="GPL-2.0-only"
makedepends="
	extra-cmake-modules
	karchive-dev
	kdoctools-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	knotifications-dev
	kstatusnotifieritem-dev
	kwidgetsaddons-dev
	kxmlgui-dev
	libarchive-dev
	qt6-qtbase-dev
	samurai
	shared-mime-info
	"
_repo_url="https://invent.kde.org/utilities/kbackup.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-10-14/kbackup-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kbackup-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
fc1e5f0b8692b3378ecc0052291423f0c28edbb0495a19b85f838cf8222f07a15cca92b204952fa4b48303371a04e6aca4566e750a45d5410da950b97dd13c83  kbackup-56afb231e5aa763050d4cacef14bdfb2bf7e8b2e.tar.xz
"
