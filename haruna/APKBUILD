# Maintainer: Bart Ribbers <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=haruna
pkgver=9999_git20240929
pkgrel=0
_commit="1aadd03e1b7a6a43731b6902e49268f73708a228"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://invent.kde.org/multimedia/haruna"
pkgdesc="Open-source video player built with Qt/QML and libmpv"
license="GPL-2.0-or-later AND GPL-3.0-or-later AND BSD-3-Clause"
depends="
	kirigami
	yt-dlp
	"
makedepends="
	breeze-dev
	extra-cmake-modules
	ffmpeg-dev
	kconfig-dev
	kcoreaddons-dev
	kdoctools-dev
	kfilemetadata-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	kirigami-dev
	kxmlgui-dev
	mpvqt-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	samurai
	"
_repo_url="https://invent.kde.org/multimedia/haruna.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-09-30/haruna-$_commit.tar.xz"
subpackages="$pkgname-lang "

options="!check"
builddir="$srcdir/haruna-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
17e306f3f829472e65d49e9fea4627955bb11bdc914bca0f4c08abad8133821d13ec4afe0e9ca479c6930a715b35865b9ce4ab054bfda40dc8bbb04c04bc2a15  haruna-1aadd03e1b7a6a43731b6902e49268f73708a228.tar.xz
"
