# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=tokodon
pkgver=9999_git20241004
pkgrel=0
_commit="23ad29e9cfa256b10ea83c6cc2e4172f920ea348"
pkgdesc="A Mastodon client for Plasma and Plasma Mobile"
url="https://invent.kde.org/network/tokodon/"
# armhf blocked by extra-cmake-modules
# riscv64, ppc64le, s390x: blocked by proposals
arch="all !armhf !riscv64 !ppc64le !s390x"
license="GPL-3.0-only AND CC0-1.0"
depends="
	kirigami
	kirigami-addons
	purpose
	"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kcoreaddons-dev
	kdbusaddons-dev
	ki18n-dev
	kio-dev
	kirigami-addons-dev
	kirigami-dev
	knotifications-dev
	mpvqt-dev
	purpose-dev
	qqc2-desktop-style-dev
	qt6-qtbase-dev
	qt6-qtmultimedia-dev
	qt6-qtsvg-dev
	qt6-qtwebsockets-dev
	qt6-qtwebview-dev
	qtkeychain-dev
	samurai
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/network/tokodon.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-10-04/tokodon-$_commit.tar.xz"
options="!check" # No tests

options="!check"
builddir="$srcdir/tokodon-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
