# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kpeople
pkgver=9999_git20241004
pkgrel=0
_commit="de3683b0b2b6f84231295e44a65e9505ac564b97"
pkgdesc="A library that provides access to all contacts and the people who hold them"
arch="all !armhf" # armhf blocked by qt6-qtdeclarative
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later"
depends="qt6-qtbase-sqlite"
depends_dev="
	kcontacts-dev
	kcoreaddons-dev
	ki18n-dev
	kitemviews-dev
	kservice-dev
	kwidgetsaddons-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kpeople.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-10-08/kpeople-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"


options="!check"
builddir="$srcdir/kpeople-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	# personsmodeltest fails
	ctest --test-dir build --output-on-failure -E '(personsmodeltest)'
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
5773cfab367c509e1ca2f31539faeacf33c04c8d4fb305e30c4b120c900b5b84f92d9133e3c0bbd000b5d21df8960ad5d507023a2d4228ad4912deed14700bca  kpeople-de3683b0b2b6f84231295e44a65e9505ac564b97.tar.xz
"
