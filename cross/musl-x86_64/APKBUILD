pkgname=musl-x86_64
pkgver=1.2.5
pkgrel=7
arch="aarch64"
subpackages="musl-dev-x86_64:package_dev"

_arch="x86_64"
_mirror="http://dl-4.alpinelinux.org/alpine/"

url="https://musl-libc.org"
license="MIT"
options="!check !strip"
pkgdesc="the musl library (lib c) implementation for $_arch"

_target="$(arch_to_hostspec $_arch)"

source="
	musl-$pkgver-r$pkgrel-$_arch-v3.21.apk::$_mirror/v3.21/main/$_arch/musl-$pkgver-r$pkgrel.apk
	musl-dev-$pkgver-r$pkgrel-$_arch-v3.21.apk::$_mirror/v3.21/main/$_arch/musl-dev-$pkgver-r$pkgrel.apk
"

package() {
	mkdir -p "$pkgdir/usr/$_target"
	cd "$pkgdir/usr/$_target"
	# Use 'busybox tar' to avoid 'tar: Child returned status 141'
	# on some machines (builds.sr.ht, gitlab-ci). See pmaports#26.
	busybox tar -xf $srcdir/musl-$pkgver-r$pkgrel-$_arch-v3.21.apk
	rm .PKGINFO .SIGN.*
}
package_dev() {
	mkdir -p "$subpkgdir/usr/$_target"
	cd "$subpkgdir/usr/$_target"
	# Use 'busybox tar' to avoid 'tar: Child returned status 141'
	# on some machines (builds.sr.ht, gitlab-ci). See pmaports#26.
	busybox tar -xf $srcdir/musl-dev-$pkgver-r$pkgrel-$_arch-v3.21.apk
	rm .PKGINFO .SIGN.*

	# symlink everything from /usr/$_target/usr/*
	# to /usr/$_target/* so the cross-compiler gcc does not fail
	# to build.
	for _dir in include lib; do
		mkdir -p "$subpkgdir/usr/$_target/$_dir"
		cd "$subpkgdir/usr/$_target/usr/$_dir"
		for i in *; do
			cd "$subpkgdir/usr/$_target/$_dir"
			ln -s /usr/$_target/usr/$_dir/$i $i
		done
	done
}

