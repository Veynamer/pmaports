pkgname=zram-generator
pkgver=1.2.1
pkgrel=0
pkgdesc=" Systemd unit generator for zram devices "
url="https://github.com/systemd/zram-generator/tree/v1.2.1"
arch="all"
license="MIT"
makedepends="
	cargo
	ronn
	rust
	systemd-dev
"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/systemd/zram-generator/archive/refs/tags/v$pkgver.tar.gz"

build() {
	make build man
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

