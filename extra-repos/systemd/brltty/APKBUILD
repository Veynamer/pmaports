# Forked from Alpine to enable systemd support

pkgname=brltty
pkgver=9996.7
_pkgver=6.7
pkgrel=0
pkgdesc="Refreshable braille display driver daemon"
url="http://brltty.app"
arch="all !ppc64le"
license="LGPL-2.1-or-later"
makedepends="
	autoconf
	automake
	gettext-dev
	gpm-dev
	icu-dev
	liblouis-dev
	linux-headers
	ncurses-dev
	systemd-dev
	tcl
	"
subpackages="
	$pkgname-dev
	$pkgname-doc
	$pkgname-lang
	$pkgname-systemd
	$pkgname-udev
	"
source="http://brltty.app/archive/brltty-$_pkgver.tar.xz"
options="!check" # no upstream test suite
builddir="$srcdir/$pkgname-$_pkgver"

prepare() {
	default_prepare
	cp /usr/share/abuild/config.guess acdir/
	cp /usr/share/abuild/config.sub acdir/
	./autogen
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--with-tables-directory=/usr/share/brltty \
		--enable-gpm
	make all
}

package() {
	make INSTALL_ROOT="$pkgdir" install install-extras
	install -m644 -D Documents/$pkgname.conf \
		"$pkgdir"/etc/$pkgname.conf
}

systemd() {
	default_systemd

	amove usr/lib/sysusers.d
	amove usr/lib/tmpfiles.d
	amove usr/libexec/brltty/systemd-wrapper
}

udev() {
	pkgdesc="$pkgdesc (udev rules)"

	amove usr/lib/udev
	amove usr/libexec/brltty/udev-wrapper
}

sha512sums="
68ef75369ce2a23dff17b212aec0844b5e3e416cc730bdf872d68f32b0d8398f86d1e91f076dcb1730543c3d47266a40d7d61842524076d2fd4e82ef95bc34bb  brltty-6.7.tar.xz
"
