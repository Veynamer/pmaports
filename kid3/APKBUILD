# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=kid3
pkgver=9999_git20240908
pkgrel=0
_commit="4cd4e697b3d30e122898cd43344fe0d10afa1199"
pkgdesc="Efficient audio tagger that supports a large variety of file formats"
url="https://kid3.kde.org/"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
license="GPL-2.0-or-later"
makedepends="
	chromaprint-dev
	extra-cmake-modules
	ffmpeg-dev
	flac-dev
	id3lib-dev
	libvorbis-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtmultimedia-dev
	qt6-qtsvg-dev
	qt6-qttools-dev
	readline-dev
	samurai
	taglib-dev
	zlib-dev
	"
subpackages="$pkgname-doc"
_repo_url="https://invent.kde.org/multimedia/kid3.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-09-08/kid3-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kid3-$_commit"

build() {
	CXXFLAGS="$CXXFLAGS -flto=auto" \
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DWITH_APPS="qt;qml;cli"
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
d9877901f700b353b97c4109b0fdf1c441d38e8ce26a68c3e1bbf0ae8498475b246251cae1ea73bcbacc3ebeb952aca39ab0ed7252f615fcf52801b47b9abc03  kid3-4cd4e697b3d30e122898cd43344fe0d10afa1199.tar.xz
"
