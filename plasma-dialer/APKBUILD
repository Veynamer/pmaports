# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-mobile
pkgname=plasma-dialer
pkgver=9999_git20240912
pkgrel=0
_commit="2065c17de7baa0f9b8a39660b69e5829c2763197"
pkgdesc="A dialer for Plasma Mobile"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://invent.kde.org/plasma-mobile/plasma-dialer"
license="GPL-2.0-or-later"
depends="
	kirigami-addons
	kirigami
	oxygen-sounds
	"
makedepends="
	callaudiod-dev
	extra-cmake-modules
	kcontacts-dev
	kcoreaddons-dev
	kdbusaddons-dev
	ki18n-dev
	kio-dev
	kirigami-addons-dev
	knotifications-dev
	kpeople-dev
	libphonenumber-dev
	modemmanager-qt-dev
	plasma-wayland-protocols
	pulseaudio-qt-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtwayland-dev
	qtmpris-dev
	samurai
	"
subpackages="$pkgname-dbg $pkgname-lang"
_repo_url="https://invent.kde.org/plasma-mobile/plasma-dialer.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-09-26/plasma-dialer-$_commit.tar.xz"
options="!check" # No tests

options="!check"
builddir="$srcdir/plasma-dialer-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
