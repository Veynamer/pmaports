# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=neochat
pkgver=9999_git20240918
pkgrel=0
_commit="a769b904dc3b4adad7e8052bb2f3a840b4b11f0d"
pkgdesc="A client for Matrix, the decentralized communication protocol"
url="https://invent.kde.org/network/neochat/"
# armhf blocked by extra-cmake-modules
# riscv64 blocked due to build failure on builders, compiler segfault
# Wait for real riscv64 hardware before enabling again
arch="all !armhf !riscv64"
license="GPL-2.0-or-later AND GPL-3.0-only AND GPL-3.0-or-later AND BSD-2-Clause"
depends="
	kirigami
	kirigami-addons
	kitemmodels
	kquickcharts
	kquickimageeditor
	qqc2-desktop-style
	qt6-qtlocation
	"
makedepends="
	cmark-dev
	extra-cmake-modules
	kconfig-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	kirigami-addons-dev
	kirigami-dev
	kitemmodels-dev
	knotifications-dev
	kquickimageeditor-dev
	kstatusnotifieritem-dev
	kunifiedpush-dev
	libquotient-dev
	purpose-dev
	qcoro-dev
	qqc2-desktop-style-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtmultimedia-dev
	qt6-qtsvg-dev
	qt6-qtwebview-dev
	qtkeychain-dev
	samurai
	sonnet-dev
	syntax-highlighting-dev
	"
subpackages="$pkgname-doc $pkgname-lang"
_repo_url="https://invent.kde.org/network/neochat.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-09-19/neochat-$_commit.tar.xz"
options="!check" # No tests

options="!check"
builddir="$srcdir/neochat-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DRECOMMENDED_SPACE_ID="#space:postmarketos.org" \
		-DRECOMMENDED_SPACE_DISPLAYNAME="postmarketOS" \
		-DRECOMMENDED_SPACE_DESCRIPTION="Official postmarketOS space"
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

