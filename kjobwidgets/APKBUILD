# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kjobwidgets
pkgver=9999_git20241004
pkgrel=0
_commit="7e8f4450725417ee2cc3114ec7f354d3eca6497a"
pkgdesc="Widgets for tracking KJob instances"
arch="all !armhf" # armhf blocked by extra-cmake-modules
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only AND (LGPL-2.1-only OR LGPL-3.0-only)"
depends_dev="
	kcoreaddons-dev
	knotifications-dev
	kwidgetsaddons-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kjobwidgets.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-10-08/kjobwidgets-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kjobwidgets-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
bc2f50f76d5736262fd65bf9ff8d958b08fb94be0fc92aac1b43bd98c1b8c3804e69aeb04da6b74321b508badb579560cc22f1526974ab16a323315502bcc67e  kjobwidgets-7e8f4450725417ee2cc3114ec7f354d3eca6497a.tar.xz
"
