# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=milou
pkgver=9999_git20240918
pkgrel=0
_commit="1568f37f3f91a15e61f256d9c9db6fc9f33a7818"
pkgdesc="A dedicated search application built on top of Baloo"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later AND (GPL-2.0-only OR GPL-3.0-only) AND (LGPL-2.1-only OR LGPL-3.0-only)"
makedepends="
	extra-cmake-modules
	kcoreaddons-dev
	kdeclarative-dev
	ki18n-dev
	kitemmodels-dev
	krunner-dev
	kservice-dev
	libplasma-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/milou.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-09-19/milou-$_commit.tar.xz"
subpackages="$pkgname-lang"

options="!check"
builddir="$srcdir/milou-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
4bd1069bb2eca401fdf07f226fae6335656e3211b8ab839efc5c1835d35ea613ccb7eed4958c607962105b66a11935d01ce1a6ede97672841345ae04e17bcff2  milou-1568f37f3f91a15e61f256d9c9db6fc9f33a7818.tar.xz
"
