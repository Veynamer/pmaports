# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=plasma-bigscreen
pkgver=9999_git20241016
pkgrel=0
_commit="d2f148d8fca4a96fc388b3b327d0b49c4b31ac0e"
pkgdesc="A 10-feet interface made for TVs"
url="https://invent.kde.org/plasma/plasma-bigscreen/"
# armhf blocked by qt5-qtdeclarative
arch="all !armhf"
license="LGPL-2.1-only OR LGPL-3.0-only OR LicenseRef-KDE-Accepted-LGPL"
depends="
	kde-cli-tools
	kdeconnect
	kirigami
	plasma-nano
	plasma-nm
	plasma-pa
	plasma-remotecontrollers
	plasma-settings
	plasma-workspace
	"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kdeclarative-dev
	ki18n-dev
	kio-dev
	kirigami-dev
	knotifications-dev
	kwayland-dev
	kwindowsystem-dev
	libplasma-dev
	plasma-activities-dev
	plasma-activities-stats-dev
	plasma-workspace-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtmultimedia-dev
	samurai
	"
subpackages="$pkgname-lang"
case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/plasma-bigscreen.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-10-16/plasma-bigscreen-$_commit.tar.xz"

options="!check"
builddir="$srcdir/plasma-bigscreen-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
d278582351efb323fdc285e3c010cc693a699de9044c4d8f2eb98918a5dd34140ebbd1f86b452f8a7876019650c0d6d16c8959111dcbbeac4a0491ad6760549a  plasma-bigscreen-d2f148d8fca4a96fc388b3b327d0b49c4b31ac0e.tar.xz
"
