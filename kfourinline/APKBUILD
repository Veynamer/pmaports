# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kfourinline
pkgver=9999_git20240909
pkgrel=0
_commit="72b2270bc4a8c781ebe7bb656b033db7b8b6ec3c"
pkgdesc="A four-in-a-row game"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/games/kfourinline/"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kcrash-dev
	kdnssd-dev
	kdoctools-dev
	ki18n-dev
	kwidgetsaddons-dev
	kxmlgui-dev
	libkdegames-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	samurai
	"
_repo_url="https://invent.kde.org/games/kfourinline.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-09-13/kfourinline-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kfourinline-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

