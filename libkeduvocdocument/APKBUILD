# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=libkeduvocdocument
pkgver=9999_git20240916
pkgrel=0
_commit="c285496fc3de5ab75d9abac902e2baa3adacaf9a"
arch="all !armhf"
url="https://edu.kde.org"
pkgdesc="Library to parse, convert, and manipulate KVTML files"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	karchive-dev
	ki18n-dev
	kio-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/education/libkeduvocdocument.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-10-18/libkeduvocdocument-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/libkeduvocdocument-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
b7b1185345f0a9ad02f608c9c2b69d5268e120f4f31d2edce92c63ccb17f9447dac387a52c26215d84363408150d993b09e415ef32818e778f77889fb65ed502  libkeduvocdocument-c285496fc3de5ab75d9abac902e2baa3adacaf9a.tar.xz
"
